<Window x:Class="SchoolManagementSystem.UI.UI.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Login"
        Height="480"
        Width="780"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F3F4F6"
        WindowStyle="None">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="380" />
        </Grid.ColumnDefinitions>

        <!-- ================= LEFT PANEL ================= -->
        <Grid Grid.Column="0">
            <Border Background="#80000000">
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center">

                    <Image Source="pack://application:,,,/Assets/login.png"
                           Width="90"
                           Margin="0,0,0,20"/>

                    <TextBlock Text="School Management System"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="White"/>

                    <TextBlock Text="Secure • Smart • Modern"
                               Foreground="#D1D5DB"
                               FontSize="12"
                               Margin="0,6,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- ================= LOGIN CARD ================= -->
        <materialDesign:Card Grid.Column="1"
                              Padding="28"
                              Background="White"
                              materialDesign:ElevationAssist.Elevation="Dp12">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- HEADER -->
                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="Welcome Back 👋"
                               FontSize="20"
                               FontWeight="Bold"/>

                    <TextBlock Text="Please login to your account"
                               FontSize="12"
                               Foreground="#6B7280"/>
                </StackPanel>

                <!-- FORM -->
                <StackPanel Grid.Row="1">

                    <!-- USERNAME -->
                    <TextBlock Text="Username" FontSize="12"/>

                    <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Height="44"
                             Padding="12,0"
                             Text="{Binding Username}"
                             Margin="0,6,0,16"/>

                    <TextBlock Text="Password" FontSize="12"/>

                    <Grid Margin="0,6,0,6"
      Height="56">
                        <!-- 👈 KEY FIX: taller than input -->

                        <!-- INPUT LAYER -->
                        <Grid VerticalAlignment="Center">
                            <PasswordBox x:Name="pwdBox"
                     Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                     Height="44"
                     Padding="12,0,44,0"/>

                            <TextBox x:Name="txtPasswordVisible"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Height="44"
                 Padding="12,0,44,0"
                 Visibility="Collapsed"/>
                        </Grid>

                        <!-- ICON LAYER -->
                        <Button Width="44"
            Height="44"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="223,0,0,0"
            Background="Transparent"
            BorderThickness="0"
            Cursor="Hand"
            Panel.ZIndex="100"
            Click="TogglePassword_Click">

                            <materialDesign:PackIcon x:Name="EyeIcon"
                                 Kind="Eye"
                                 Width="12"
                                 Height="22"
                                 Foreground="#6B7280" VerticalAlignment="Center"/>
                        </Button>
                    </Grid>



                </StackPanel>

                <!-- ACTIONS -->
                <StackPanel Grid.Row="2" Margin="0,20,0,0">

                    <!-- LOGIN BUTTON -->
                    <Button Height="38"
                            Click="Login_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}">

                        <Grid>
                            <!-- TEXT -->
                            <TextBlock Text="Sign In"
                                       HorizontalAlignment="Center"
                                       Visibility="{Binding LoginTextVisibility}"/>

                            <!-- SPINNER --><!--
                            <ProgressBar Width="24"
                                         Height="24"
                                         IsIndeterminate="True"
                                         Style="{StaticResource MaterialDesignCircularProgressBar}"
                                         Visibility="{Binding SpinnerVisibility}"/>-->
                        </Grid>
                    </Button>

                    <TextBlock Text="Forgot password?"
                               FontSize="12"
                               Foreground="#2563EB"
                               Cursor="Hand"
                               HorizontalAlignment="Center"
                               Margin="0,12,0,0"
                               MouseDown="ForgotPassword_Click"/>
                </StackPanel>

            </Grid>
        </materialDesign:Card>

        <!-- ================= SNACKBAR ================= -->
        <materialDesign:Snackbar MessageQueue="{Binding SnackbarMessageQueue}"
                                  VerticalAlignment="Bottom"
                                  Margin="0,0,0,20"/>
    </Grid>
</Window>
