<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.Dashboard.ParentDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Margin="0,0,0,20">
            <TextBlock Text="Parent Dashboard"
                       FontSize="24"
                       FontWeight="Bold"/>
            <TextBlock Text="Monitor your child’s academic progress, attendance and activities"
                       Foreground="Gray"
                       FontSize="12"/>
        </StackPanel>

        <!-- CONTENT -->
        <ScrollViewer Grid.Row="1">
            <StackPanel>

                <!-- KPI CARDS -->
                <UniformGrid Columns="4" Margin="0,0,0,20">

                    <Border Background="#16A085" CornerRadius="6" Margin="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Children" Foreground="White"/>
                            <TextBlock Text="{Binding TotalChildren}"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#2980B9" CornerRadius="6" Margin="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Avg Attendance %" Foreground="White"/>
                            <TextBlock Text="{Binding AverageAttendance}"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#E67E22" CornerRadius="6" Margin="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Pending Fees" Foreground="White"/>
                            <TextBlock Text="{Binding PendingFees}"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#8E44AD" CornerRadius="6" Margin="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Upcoming Events" Foreground="White"/>
                            <TextBlock Text="{Binding UpcomingEvents}"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>

                </UniformGrid>

                <!-- CHILD ACADEMIC OVERVIEW -->
                <TextBlock Text="Children Academic Overview"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="5"/>

                <Grid Margin="0,10,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- TODAY SCHEDULE -->
                    <Border CornerRadius="6"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Padding="12"
                            Margin="5">

                        <StackPanel>
                            <TextBlock Text="Today's Classes"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>

                            <ItemsControl ItemsSource="{Binding TodayClasses}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   Margin="5,4"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- ASSIGNMENTS -->
                    <Border Grid.Column="1"
                            CornerRadius="6"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Padding="12"
                            Margin="5">

                        <StackPanel>
                            <TextBlock Text="Pending Assignments"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>

                            <ItemsControl ItemsSource="{Binding PendingAssignments}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   Margin="5,4"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- COMMUNICATION & FINANCE -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- ANNOUNCEMENTS -->
                    <Border CornerRadius="6"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Padding="12"
                            Margin="5">

                        <StackPanel>
                            <TextBlock Text="School Announcements"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>

                            <ItemsControl ItemsSource="{Binding Announcements}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   Margin="5,4"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- FEE & PAYMENTS -->
                    <Border Grid.Column="1"
                            CornerRadius="6"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Padding="12"
                            Margin="5">

                        <StackPanel>
                            <TextBlock Text="Fee &amp; Payments"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>

                            <ItemsControl ItemsSource="{Binding FeeDetails}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   Margin="5,4"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
