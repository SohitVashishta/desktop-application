<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.Dashboard.AdminDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Margin="0,0,0,20">
            <TextBlock Text="Admin Dashboard"
                       FontSize="24"
                       FontWeight="Bold"/>
            <TextBlock Text="System overview, statistics and administrative insights"
                       Foreground="Gray"
                       FontSize="12"/>
        </StackPanel>

        <!-- CONTENT -->
        <ScrollViewer Grid.Row="1">
            <StackPanel>

                <!-- KPI CARDS -->
                <UniformGrid Columns="4" Margin="0,0,0,20">

                    <Border Background="#2C3E50" CornerRadius="6" Margin="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Total Users" Foreground="White"/>
                            <TextBlock Text="{Binding TotalUsers}"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#16A085" CornerRadius="6" Margin="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Students" Foreground="White"/>
                            <TextBlock Text="{Binding TotalStudents}"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#2980B9" CornerRadius="6" Margin="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Teachers" Foreground="White"/>
                            <TextBlock Text="{Binding TotalTeachers}"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#8E44AD" CornerRadius="6" Margin="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Active Classes" Foreground="White"/>
                            <TextBlock Text="{Binding TotalClasses}"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#EFF6FF" CornerRadius="6" Margin="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Active Classes" Foreground="White"/>
                            <TextBlock Text="{Binding Kpi.TotalFees}"
                    FontSize="26"
                    FontWeight="Bold"
                    Foreground="White"/>
                        </StackPanel>
                    </Border>

 <Border Background="#E0F2FE" CornerRadius="6" Margin="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Collected Fees" Foreground="White"/>
                            <TextBlock Text="{Binding Kpi.CollectedFees}"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>



                    <Border Background="#E0F2FE" CornerRadius="6" Margin="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Collected Fees" Foreground="White"/>
                            <TextBlock Text="{Binding Kpi.PedingFees}"
                                      FontSize="26"
                                      FontWeight="Bold"
                                      Foreground="White"/>
                        </StackPanel>
                    </Border>


                </UniformGrid>

                <!-- SYSTEM OVERVIEW -->
                <TextBlock Text="System Overview"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="5"/>

                <Grid Margin="0,10,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- RECENT ACTIVITIES -->
                    <Border CornerRadius="6"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Padding="12"
                            Margin="5">

                        <StackPanel>
                            <TextBlock Text="Recent Activities"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>

                            <ItemsControl ItemsSource="{Binding RecentActivities}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   Margin="5,4"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- ANNOUNCEMENTS -->
                    <Border Grid.Column="1"
                            CornerRadius="6"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Padding="12"
                            Margin="5">

                        <StackPanel>
                            <TextBlock Text="Announcements"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>

                            <ItemsControl ItemsSource="{Binding Announcements}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   Margin="5,4"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- SYSTEM HEALTH -->
                <Border CornerRadius="6"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        Padding="12"
                        Margin="5">

                    <StackPanel>
                        <TextBlock Text="System Health"
                                   FontSize="16"
                                   FontWeight="SemiBold"/>

                        <UniformGrid Columns="3" Margin="0,10,0,0">

                            <StackPanel Margin="8">
                                <TextBlock Text="Database Status" Foreground="Gray"/>
                                <TextBlock Text="{Binding DatabaseStatus}"
                                           FontWeight="Bold"/>
                            </StackPanel>

                            <StackPanel Margin="8">
                                <TextBlock Text="Server Status" Foreground="Gray"/>
                                <TextBlock Text="{Binding ServerStatus}"
                                           FontWeight="Bold"/>
                            </StackPanel>

                            <StackPanel Margin="8">
                                <TextBlock Text="Last Backup" Foreground="Gray"/>
                                <TextBlock Text="{Binding LastBackupDate}"
                                           FontWeight="Bold"/>
                            </StackPanel>

                        </UniformGrid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
