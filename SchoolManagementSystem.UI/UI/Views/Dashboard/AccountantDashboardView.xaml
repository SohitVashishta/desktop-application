<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.Dashboard.AccountantDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Margin="0,0,0,20">
            <TextBlock Text="Accountant Dashboard"
                       FontSize="24"
                       FontWeight="Bold"/>
            <TextBlock Text="Financial overview, fees, expenses and payment status"
                       Foreground="Gray"
                       FontSize="12"/>
        </StackPanel>

        <!-- CONTENT -->
        <ScrollViewer Grid.Row="1">
            <StackPanel>

                <!-- KPI CARDS -->
                <UniformGrid Columns="4" Margin="0,0,0,20">

                    <Border Background="#2C3E50" CornerRadius="6" Margin="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Total Fees Collected" Foreground="White"/>
                            <TextBlock Text="{Binding TotalFeesCollected}"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#27AE60" CornerRadius="6" Margin="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Pending Fees" Foreground="White"/>
                            <TextBlock Text="{Binding PendingFees}"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#E67E22" CornerRadius="6" Margin="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Monthly Expenses" Foreground="White"/>
                            <TextBlock Text="{Binding MonthlyExpenses}"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#8E44AD" CornerRadius="6" Margin="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Salary Disbursements" Foreground="White"/>
                            <TextBlock Text="{Binding SalaryDisbursements}"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>

                </UniformGrid>

                <!-- FINANCIAL OVERVIEW -->
                <TextBlock Text="Financial Overview"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="5"/>

                <Grid Margin="0,10,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- RECENT TRANSACTIONS -->
                    <Border CornerRadius="6"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Padding="12"
                            Margin="5">

                        <StackPanel>
                            <TextBlock Text="Recent Transactions"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>

                            <ItemsControl ItemsSource="{Binding RecentTransactions}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   Margin="5,4"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- PENDING PAYMENTS -->
                    <Border Grid.Column="1"
                            CornerRadius="6"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Padding="12"
                            Margin="5">

                        <StackPanel>
                            <TextBlock Text="Pending Payments"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>

                            <ItemsControl ItemsSource="{Binding PendingPayments}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   Margin="5,4"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- REPORTS & COMPLIANCE -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- FINANCIAL REPORTS -->
                    <Border CornerRadius="6"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Padding="12"
                            Margin="5">

                        <StackPanel>
                            <TextBlock Text="Financial Reports"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>

                            <ItemsControl ItemsSource="{Binding FinancialReports}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   Margin="5,4"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- TAX & COMPLIANCE -->
                    <Border Grid.Column="1"
                            CornerRadius="6"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Padding="12"
                            Margin="5">

                        <StackPanel>
                            <TextBlock Text="Tax &amp; Compliance"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>

                            <ItemsControl ItemsSource="{Binding TaxComplianceItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   Margin="5,4"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
