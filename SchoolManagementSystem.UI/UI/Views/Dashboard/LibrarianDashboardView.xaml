<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.Dashboard.LibrarianDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Margin="0,0,0,20">
            <TextBlock Text="Librarian Dashboard"
                       FontSize="24"
                       FontWeight="Bold"/>
            <TextBlock Text="Library overview, books circulation and pending returns"
                       Foreground="Gray"
                       FontSize="12"/>
        </StackPanel>

        <!-- CONTENT -->
        <ScrollViewer Grid.Row="1">
            <StackPanel>

                <!-- KPI CARDS -->
                <UniformGrid Columns="4" Margin="0,0,0,20">

                    <Border Background="#2C3E50" CornerRadius="6" Margin="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Total Books" Foreground="White"/>
                            <TextBlock Text="{Binding TotalBooks}"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#27AE60" CornerRadius="6" Margin="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Books Issued" Foreground="White"/>
                            <TextBlock Text="{Binding BooksIssued}"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#E67E22" CornerRadius="6" Margin="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Pending Returns" Foreground="White"/>
                            <TextBlock Text="{Binding PendingReturns}"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#8E44AD" CornerRadius="6" Margin="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="New Arrivals" Foreground="White"/>
                            <TextBlock Text="{Binding NewArrivals}"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>

                </UniformGrid>

                <!-- LIBRARY OVERVIEW -->
                <TextBlock Text="Library Overview"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="5"/>

                <Grid Margin="0,10,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- RECENT ISSUES -->
                    <Border CornerRadius="6"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Padding="12"
                            Margin="5">

                        <StackPanel>
                            <TextBlock Text="Recent Book Issues"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>

                            <ItemsControl ItemsSource="{Binding RecentIssues}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   Margin="5,4"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- PENDING RETURNS -->
                    <Border Grid.Column="1"
                            CornerRadius="6"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Padding="12"
                            Margin="5">

                        <StackPanel>
                            <TextBlock Text="Pending Book Returns"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>

                            <ItemsControl ItemsSource="{Binding PendingReturnList}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   Margin="5,4"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- REQUESTS & ANNOUNCEMENTS -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- BOOK REQUESTS -->
                    <Border CornerRadius="6"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Padding="12"
                            Margin="5">

                        <StackPanel>
                            <TextBlock Text="Book Requests"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>

                            <ItemsControl ItemsSource="{Binding BookRequests}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   Margin="5,4"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- ANNOUNCEMENTS -->
                    <Border Grid.Column="1"
                            CornerRadius="6"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Padding="12"
                            Margin="5">

                        <StackPanel>
                            <TextBlock Text="Library Announcements"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>

                            <ItemsControl ItemsSource="{Binding Announcements}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   Margin="5,4"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
