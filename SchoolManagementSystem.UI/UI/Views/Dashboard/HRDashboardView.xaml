<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.Dashboard.HRDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Margin="0,0,0,20">
            <TextBlock Text="HR Dashboard"
                       FontSize="24"
                       FontWeight="Bold"/>
            <TextBlock Text="Staff overview, attendance, payroll and HR activities"
                       Foreground="Gray"
                       FontSize="12"/>
        </StackPanel>

        <!-- CONTENT -->
        <ScrollViewer Grid.Row="1">
            <StackPanel>

                <!-- KPI CARDS -->
                <UniformGrid Columns="4" Margin="0,0,0,20">

                    <Border Background="#34495E" CornerRadius="6" Margin="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Total Employees" Foreground="White"/>
                            <TextBlock Text="{Binding TotalEmployees}"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#27AE60" CornerRadius="6" Margin="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Present Today" Foreground="White"/>
                            <TextBlock Text="{Binding PresentToday}"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#E67E22" CornerRadius="6" Margin="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Leaves Pending" Foreground="White"/>
                            <TextBlock Text="{Binding PendingLeaves}"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#8E44AD" CornerRadius="6" Margin="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Open Positions" Foreground="White"/>
                            <TextBlock Text="{Binding OpenPositions}"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>

                </UniformGrid>

                <!-- HR OVERVIEW -->
                <TextBlock Text="HR Overview"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="5"/>

                <Grid Margin="0,10,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- RECENT HR ACTIVITIES -->
                    <Border CornerRadius="6"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Padding="12"
                            Margin="5">

                        <StackPanel>
                            <TextBlock Text="Recent HR Activities"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>

                            <ItemsControl ItemsSource="{Binding RecentHRActivities}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   Margin="5,4"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- STAFF ANNOUNCEMENTS -->
                    <Border Grid.Column="1"
                            CornerRadius="6"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Padding="12"
                            Margin="5">

                        <StackPanel>
                            <TextBlock Text="Staff Announcements"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>

                            <ItemsControl ItemsSource="{Binding StaffAnnouncements}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   Margin="5,4"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- PAYROLL & COMPLIANCE -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- PAYROLL STATUS -->
                    <Border CornerRadius="6"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Padding="12"
                            Margin="5">

                        <StackPanel>
                            <TextBlock Text="Payroll Status"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>

                            <ItemsControl ItemsSource="{Binding PayrollStatus}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   Margin="5,4"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- COMPLIANCE -->
                    <Border Grid.Column="1"
                            CornerRadius="6"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Padding="12"
                            Margin="5">

                        <StackPanel>
                            <TextBlock Text="Compliance &amp; Policies"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>

                            <ItemsControl ItemsSource="{Binding ComplianceItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   Margin="5,4"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
