<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.Dashboard.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <TextBlock Text="Dashboard"
                   FontSize="26"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- KPI CARDS -->
        <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,25">

            <!-- STUDENTS -->
            <Border Background="#3498DB" Margin="8" Padding="20" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Total Students"
                               Foreground="White"
                               FontSize="14"/>
                    <TextBlock Text="{Binding TotalStudents}"
                               Foreground="White"
                               FontSize="30"
                               FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- TEACHERS -->
            <Border Background="#27AE60" Margin="8" Padding="20" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Total Teachers"
                               Foreground="White"
                               FontSize="14"/>
                    <TextBlock Text="{Binding TotalTeachers}"
                               Foreground="White"
                               FontSize="30"
                               FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- TODAY ATTENDANCE -->
            <Border Background="#8E44AD" Margin="8" Padding="20" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Today's Attendance"
                               Foreground="White"
                               FontSize="14"/>
                    <TextBlock Text="{Binding TodayAttendancePercentage}"
                               Foreground="White"
                               FontSize="30"
                               FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- REPORTS -->
            <Border Background="#E67E22" Margin="8" Padding="20" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Reports"
                               Foreground="White"
                               FontSize="14"/>
                    <TextBlock Text="View"
                               Foreground="White"
                               FontSize="30"
                               FontWeight="Bold"/>
                </StackPanel>
            </Border>

        </UniformGrid>

        <!-- QUICK ACTIONS -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: QUICK ACTIONS -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Quick Actions"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>

                <Button Content="➕ Add Student" Height="40" Margin="0,5"/>
                <Button Content="🧑‍🏫 Add Teacher" Height="40" Margin="0,5"/>
                <Button Content="📅 Mark Attendance" Height="40" Margin="0,5"/>
            </StackPanel>

            <!-- RIGHT: ALERTS -->
            <StackPanel Grid.Column="1" Margin="20,0,0,0">
                <TextBlock Text="Alerts"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>

                <TextBlock Text="• Pending attendance for today"
                           Foreground="#C0392B"
                           FontSize="14"
                           Margin="0,5"/>

                <TextBlock Text="• Monthly attendance report pending"
                           Foreground="#E67E22"
                           FontSize="14"
                           Margin="0,5"/>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
