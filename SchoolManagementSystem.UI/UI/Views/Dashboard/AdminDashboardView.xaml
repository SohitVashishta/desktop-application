<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.Dashboard.AdminDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Margin="0,0,0,20">
            <TextBlock Text="Admin Dashboard"
                       FontSize="26"
                       FontWeight="Bold"/>
            <TextBlock Text="Centralized control real-time overview"
                       Foreground="Gray"
                       FontSize="12"/>
        </StackPanel>

        <!-- KPI CARDS -->
        <UniformGrid Grid.Row="1" Columns="4">

            <Border Background="#2563EB" Margin="8" Padding="20" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Students" Foreground="White"/>
                    <TextBlock Text="{Binding TotalStudents}"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="White"/>
                </StackPanel>
            </Border>

            <Border Background="#16A34A" Margin="8" Padding="20" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Teachers" Foreground="White"/>
                    <TextBlock Text="{Binding TotalTeachers}"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="White"/>
                </StackPanel>
            </Border>

            <Border Background="#D97706" Margin="8" Padding="20" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Today's Attendance" Foreground="White"/>
                    <TextBlock Text="{Binding TodayAttendancePercentage}"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="White"/>
                </StackPanel>
            </Border>

            <Border Background="#DC2626" Margin="8" Padding="20" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Pending Fees" Foreground="White"/>
                    <TextBlock Text="{Binding PendingFeesAmount}"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="White"/>
                </StackPanel>
            </Border>

        </UniformGrid>
    </Grid>
</UserControl>
