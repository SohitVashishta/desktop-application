<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.StudentManagement.Students.EditStudentDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <materialDesign:Card Width="520"
                         Padding="20">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <TextBlock Text="Edit Student"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="0,0,0,16"/>

            <!-- FORM -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Row="0" Grid.Column="0"
                         Margin="0,0,8,12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="Admission No"
                         Text="{Binding AdmissionNo}"/>

                <TextBox Grid.Row="0" Grid.Column="1"
                         Margin="0,0,0,12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="Student Name"
                         Text="{Binding StudentName}"/>

                <TextBox Grid.Row="1" Grid.Column="0"
                         Margin="0,0,8,12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="Class"
                         Text="{Binding ClassName}"/>

                <TextBox Grid.Row="1" Grid.Column="1"
                         Margin="0,0,0,12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="Section"
                         Text="{Binding SectionName}"/>

                <TextBox Grid.Row="2" Grid.Column="0"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="Gender"
                         Text="{Binding Gender}"/>
            </Grid>

            <!-- FOOTER -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,16,0,0">

                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}">
                    Cancel
                </Button>

                <Button Margin="12,0,0,0"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Command="{Binding SaveCommand}">
                    Save
                </Button>
            </StackPanel>
        </Grid>

    </materialDesign:Card>
</UserControl>
