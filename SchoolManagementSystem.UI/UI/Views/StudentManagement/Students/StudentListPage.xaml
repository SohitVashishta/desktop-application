<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.StudentManagement.StudentListPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- ================= RESOURCES ================= -->
    <UserControl.Resources>

        <Style x:Key="CenterCellText" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CenterHeaderText" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

    </UserControl.Resources>

    <!-- ================= SINGLE WORKING DIALOG HOST (UNCHANGED) ================= -->
    <materialDesign:DialogHost Identifier="RootDialog">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ================= FILTER BAR (USER MANAGEMENT STYLE) ================= -->
            <Border Grid.Row="0"
                    Background="#F9FAFB"
                    Padding="8"
                    BorderBrush="#E5E7EB"
                    BorderThickness="0,0,0,1">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- FILTERS -->
                    <Grid Grid.Column="0" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 Height="32"
                                 Margin="0,0,4,0"
                                 Padding="8,5"
                                 FontSize="10.5"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Search"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>

                        <!-- ACADEMIC YEAR -->
                        <ComboBox Grid.Column="1"
              Height="32"
              Margin="0,0,4,0"
              Padding="8,5"
              FontSize="10.5"
              Style="{StaticResource MaterialDesignOutlinedComboBox}"
              ItemsSource="{Binding AcademicYears}"
              SelectedItem="{Binding SelectedAcademicYear}"
              DisplayMemberPath="YearName"
              materialDesign:HintAssist.Hint="Session"/>

                        <!-- CLASS -->
                        <ComboBox Grid.Column="2"
              Height="32"
              Margin="0,0,4,0"
              Padding="8,5"
              FontSize="10.5"
              Style="{StaticResource MaterialDesignOutlinedComboBox}"
              ItemsSource="{Binding Classes}"
              SelectedItem="{Binding SelectedClass}"
              DisplayMemberPath="ClassName"
              materialDesign:HintAssist.Hint="Class"/>

                        <!-- SECTION -->
                        <ComboBox Grid.Column="3"
              Height="32"
              Margin="0,0,4,0"
              Padding="8,5"
              FontSize="10.5"
              Style="{StaticResource MaterialDesignOutlinedComboBox}"
              ItemsSource="{Binding Sections}"
              SelectedItem="{Binding SelectedSection}"
              DisplayMemberPath="SectionName"
              materialDesign:HintAssist.Hint="Section"/>
                    </Grid>

                    <!-- ACTION BUTTONS -->
                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">

                        <Button Width="110"
                                Height="32"
                                Margin="0,0,4,0"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Command="{Binding BulkUploadCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileExcel" Width="14" Height="14" Margin="0,0,0,0"/>
                                <TextBlock FontSize="10.1" Text="Bulk Upload"/>
                            </StackPanel>
                        </Button>

                        <Button Width="80"
                                Height="32"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#2563EB"
                                Foreground="White"
                                Command="{Binding AddStudentCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountPlus" Width="14" Height="14" Margin="0,0,4,0"/>
                                <TextBlock FontSize="10.1"  Text="Add"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>
                </Grid>
            </Border>
            <!-- ================= STUDENT GRID (USER MANAGEMENT STYLE) ================= -->
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding FilteredStudents}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      RowHeight="44"
                      GridLinesVisibility="None"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      Style="{StaticResource MaterialDesignDataGrid}">

                <DataGrid.Columns>

                    <DataGridTextColumn Header="Adm No"
                                        Binding="{Binding AdmissionNo}"
                                        Width="120"
                                        ElementStyle="{StaticResource CenterCellText}"
                                        HeaderStyle="{StaticResource CenterHeaderText}"/>

                    <DataGridTextColumn Header="Student Name"
                                        Binding="{Binding StudentName}"
                                        Width="3*"
                                        ElementStyle="{StaticResource CenterCellText}"
                                        HeaderStyle="{StaticResource CenterHeaderText}"/>

                    <DataGridTextColumn Header="Class"
                                        Binding="{Binding ClassName}"
                                        Width="*"
                                        ElementStyle="{StaticResource CenterCellText}"
                                        HeaderStyle="{StaticResource CenterHeaderText}"/>

                    <DataGridTextColumn Header="Section"
                                        Binding="{Binding SectionName}"
                                        Width="*"
                                        ElementStyle="{StaticResource CenterCellText}"
                                        HeaderStyle="{StaticResource CenterHeaderText}"/>

                    <DataGridTextColumn Header="Gender"
                                        Binding="{Binding Gender}"
                                        Width="*"
                                        ElementStyle="{StaticResource CenterCellText}"
                                        HeaderStyle="{StaticResource CenterHeaderText}"/>

                    <DataGridTextColumn Header="Status"
                                        Binding="{Binding IsActive}"
                                        Width="100"
                                        ElementStyle="{StaticResource CenterCellText}"
                                        HeaderStyle="{StaticResource CenterHeaderText}"/>

                    <!-- ACTIONS -->
                    <DataGridTemplateColumn Header=""
                                            Width="90"
                                            HeaderStyle="{StaticResource CenterHeaderText}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid HorizontalAlignment="Center"
                                      VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0"
                                            Width="28"
                                            Height="28"
                                            Style="{StaticResource MaterialDesignIconButton}"
                                            Command="{Binding DataContext.ViewProfileCommand,
                                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}">
                                        <materialDesign:PackIcon Kind="AccountDetailsOutline"
                                                                 Width="16"
                                                                 Height="16"/>
                                    </Button>

                                    <Button Grid.Column="1"
                                            Width="28"
                                            Height="28"
                                            Margin="4,0,0,0"
                                            Style="{StaticResource MaterialDesignIconButton}"
                                            Command="{Binding DataContext.EditStudentCommand,
                                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}">
                                        <materialDesign:PackIcon Kind="PencilOutline"
                                                                 Width="16"
                                                                 Height="16"/>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>

            <!-- ================= PAGINATION (USER MANAGEMENT STYLE) ================= -->
            <Border Grid.Row="2"
                    Padding="6"
                    Background="#F9FAFB"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1,0,0,0">

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">

                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            FontSize="11"
                            Command="{Binding PrevPageCommand}"
                            IsEnabled="{Binding CanGoPrevious}">
                        ◀ Prev
                    </Button>

                    <TextBlock Text="{Binding PageInfo}"
                               FontSize="11"
                               Margin="10,0"
                               VerticalAlignment="Center"/>

                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            FontSize="11"
                            Command="{Binding NextPageCommand}"
                            IsEnabled="{Binding CanGoNext}">
                        Next ▶
                    </Button>
                </StackPanel>
            </Border>

            <!-- ================= SNACKBAR ================= -->
            <materialDesign:Snackbar Grid.RowSpan="3"
                                     MessageQueue="{Binding SnackbarMessageQueue}"
                                     VerticalAlignment="Bottom"/>

        </Grid>
    </materialDesign:DialogHost>
</UserControl>
