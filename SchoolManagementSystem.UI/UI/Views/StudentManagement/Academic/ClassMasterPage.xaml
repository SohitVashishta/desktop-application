<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.StudentManagement.Academic.ClassMasterPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <materialDesign:DialogHost IsOpen="{Binding IsDialogOpen}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ================= TOOLBAR ================= -->
            <Border Grid.Row="0"
                    Background="#F9FAFB"
                    Padding="12"
                    BorderBrush="#E5E7EB"
                    BorderThickness="0,0,0,1">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- FILTERS -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                        <TextBox Width="160"
                                 Height="40"
                                 Margin="0,0,8,0"
                                 Padding="12,8"
                                 FontSize="12"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Search class / section"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>

                        <ComboBox Width="140"
                                  Height="40"
                                  Margin="0,0,8,0"
                                  Padding="12,8"
                                  FontSize="12"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  ItemsSource="{Binding Grades}"
                                  SelectedItem="{Binding SelectedGrade}"
                                  DisplayMemberPath="GradeName"
                                  materialDesign:HintAssist.Hint="Grade"/>

                        <Button Width="100"
                                Height="40"
                                FontSize="12"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Background="#E5E7EB"
                                Command="{Binding ResetFiltersCommand}">
                            Reset
                        </Button>
                    </StackPanel>

                    <!-- ADD CLASS -->
                    <Button Grid.Column="1"
                            Width="140"
                            Height="40"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#2563EB"
                            Foreground="White"
                            Command="{Binding AddClassCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="GoogleClassroom"
                                                     Width="18"
                                                     Height="18"
                                                     Margin="0,0,6,0"/>
                            <TextBlock Text="Add Class"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!-- ================= CLASS GRID ================= -->
            <Border Grid.Row="1"
                    Background="White"
                    ClipToBounds="True">

                <DataGrid ItemsSource="{Binding FilteredClasses}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          RowHeight="48"
                          GridLinesVisibility="None"
                          ScrollViewer.VerticalScrollBarVisibility="Disabled"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          Style="{StaticResource MaterialDesignDataGrid}">

                    <DataGrid.Columns>

                        <!-- CLASS -->
                        <DataGridTextColumn Header="Class"
                                            Binding="{Binding ClassName}"
                                            Width="2*"
                                            FontSize="10"/>

                        <!-- SECTION -->
                        <DataGridTextColumn Header="Section"
                                            Binding="{Binding Section}"
                                            Width="120"
                                            FontSize="10"/>

                        <!-- GRADE -->
                        <DataGridTextColumn Header="Grade"
                                            Binding="{Binding GradeName}"
                                            Width="140"
                                            FontSize="10"/>

                        <!-- TEACHER -->
                        <DataGridTextColumn Header="Class Teacher"
                                            Binding="{Binding LeadTeacherName}"
                                            Width="2*"
                                            FontSize="10"/>

                        <!-- ACTION -->
                        <DataGridTemplateColumn Header="" Width="72">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            Width="32"
                                            Height="32"
                                            Command="{Binding DataContext.EditClassCommand,
                                                RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}">
                                        <materialDesign:PackIcon Kind="PencilOutline"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- ================= PAGINATION (OPTIONAL) ================= -->
            <Border Grid.Row="2"
                    Padding="8"
                    Background="#F9FAFB"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1,0,0,0">

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">

                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            Command="{Binding PrevPageCommand}"
                            IsEnabled="{Binding CanGoPrevious}">
                        ◀ Prev
                    </Button>

                    <TextBlock Text="{Binding PageInfo}"
                               Margin="12,0"
                               VerticalAlignment="Center"/>

                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            Command="{Binding NextPageCommand}"
                            IsEnabled="{Binding CanGoNext}">
                        Next ▶
                    </Button>
                </StackPanel>
            </Border>
            <!-- 🔥 SNACKBAR (CORRECT PLACE) -->
            <materialDesign:Snackbar
            Grid.RowSpan="3"
            VerticalAlignment="Bottom"
            MessageQueue="{Binding SnackbarMessageQueue}" />
        </Grid>
        
        <!-- ================= ADD / EDIT DIALOG ================= -->
        <materialDesign:DialogHost.DialogContent>

            <!-- ❗ SAME UI AS YOU GAVE -->
            <materialDesign:Card Padding="24"
                              Width="420"
                              DataContext="{Binding DialogVM}">

                <StackPanel>

                    <TextBlock Text="{Binding DialogTitle}"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0,0,0,16"/>

                    <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="Class Name"
                         Text="{Binding ClassName, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,12,0,0"
                         materialDesign:HintAssist.Hint="Section"
                         Text="{Binding Section, UpdateSourceTrigger=PropertyChanged}"/>


                    <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          Margin="0,12,0,0"
                          ItemsSource="{Binding Grades}"
                          SelectedValue="{Binding SelectedGradeId}"
                          SelectedValuePath="GradeId"
                          DisplayMemberPath="GradeName"
                          materialDesign:HintAssist.Hint="Grade"/>

                    <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          Margin="0,12,0,0"
                          ItemsSource="{Binding Teachers}"
                          SelectedValue="{Binding SelectedTeacherId}"
                          SelectedValuePath="TeacherId"
                          DisplayMemberPath="TeacherName"
                          materialDesign:HintAssist.Hint="Class Teacher"/>

                    <!-- ACTIONS -->
                    <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,24,0,0">

                        <Button Style="{StaticResource MaterialDesignFlatButton}"
        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}">
                            Cancel
                        </Button>


                        <Button
Style="{StaticResource MaterialDesignRaisedButton}"
IsEnabled="{Binding CanSave}"
Command="{Binding DataContext.SaveDialogCommand,
                  RelativeSource={RelativeSource AncestorType=UserControl}}">
                            Save
                        </Button>


                    </StackPanel>

                </StackPanel>
            </materialDesign:Card>

        </materialDesign:DialogHost.DialogContent>

    </materialDesign:DialogHost>
</UserControl>
