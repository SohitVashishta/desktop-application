<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.StudentManagement.Academic.SectionMasterPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <materialDesign:DialogHost IsOpen="{Binding IsDialogOpen}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ================= TOOLBAR ================= -->
            <Border Grid.Row="0"
                    Background="#F9FAFB"
                    Padding="12"
                    BorderBrush="#E5E7EB"
                    BorderThickness="0,0,0,1">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- FILTER -->
                    <TextBox Width="160"
                             Height="40"
                             Padding="12,8"
                             FontSize="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Search section"
                             Text="{Binding SearchText,
                                    UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- ADD -->
                    <Button Grid.Column="1"
                            Width="140"
                            Height="40"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#2563EB"
                            Foreground="White"
                            Command="{Binding AddCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ViewGridPlus"
                                                     Width="18"
                                                     Height="18"
                                                     Margin="0,0,6,0"/>
                            <TextBlock Text="Add Section"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!-- ================= GRID ================= -->
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding FilteredSections}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      RowHeight="48"
                      GridLinesVisibility="None"
                      Style="{StaticResource MaterialDesignDataGrid}">

                <DataGrid.Columns>

                    <DataGridTextColumn Header="Section"
                                        Binding="{Binding SectionName}"
                                        Width="*"/>

                    <DataGridCheckBoxColumn Header="Active"
                                             Binding="{Binding IsActive}"
                                             Width="80"/>

                    <DataGridTemplateColumn Width="72">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                        Command="{Binding DataContext.EditCommand,
                                                  RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}">
                                    <materialDesign:PackIcon Kind="PencilOutline"/>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>

            <!-- ================= SNACKBAR ================= -->
            <materialDesign:Snackbar Grid.RowSpan="2"
                                     MessageQueue="{Binding SnackbarMessageQueue}"
                                     VerticalAlignment="Bottom"/>
        </Grid>

        <!-- ================= ADD / EDIT DIALOG ================= -->
        <materialDesign:DialogHost.DialogContent>

            <materialDesign:Card Padding="24" Width="420">

                <StackPanel>

                    <TextBlock Text="{Binding DialogTitle}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,16"/>

                    <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Section Name (A, B, C)"
                             Text="{Binding EditSection.SectionName,
                                    UpdateSourceTrigger=PropertyChanged}"/>

                    <CheckBox Content="Active"
                              Margin="0,12,0,0"
                              IsChecked="{Binding EditSection.IsActive}"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,24,0,0">

                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}">
                            Cancel
                        </Button>

                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Margin="12,0,0,0"
                                Command="{Binding SaveCommand}">
                            Save
                        </Button>

                    </StackPanel>

                </StackPanel>
            </materialDesign:Card>

        </materialDesign:DialogHost.DialogContent>

    </materialDesign:DialogHost>
</UserControl>
