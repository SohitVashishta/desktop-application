<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.StudentManagement.Academic.SubjectMasterPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <materialDesign:DialogHost IsOpen="{Binding IsDialogOpen}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Toolbar -->
                <RowDefinition Height="*"/>
                <!-- Grid -->
                <RowDefinition Height="Auto"/>
                <!-- Pagination -->
            </Grid.RowDefinitions>


            <!-- ================= TOOLBAR ================= -->
            <Border Grid.Row="0"
                    Background="#F9FAFB"
                    Padding="12"
                    BorderBrush="#E5E7EB"
                    BorderThickness="0,0,0,1">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- FILTERS -->
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center">

                        <TextBox Width="160"
                                 Height="40"
                                 Margin="0,0,8,0"
                                 Padding="12,8"
                                 FontSize="12"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Search subject"
                                 Text="{Binding SearchText,
                                        UpdateSourceTrigger=PropertyChanged}"/>

                        <ComboBox Width="140"
                                  Height="40"
                                  Margin="0,0,8,0"
                                  Padding="12,8"
                                  FontSize="12"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  ItemsSource="{Binding Grades}"
                                  SelectedItem="{Binding SelectedGrade}"
                                  DisplayMemberPath="GradeName"
                                  materialDesign:HintAssist.Hint="Grade"/>

                        <Button Width="100"
                                Height="40"
                                FontSize="12"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Background="#E5E7EB"
                                Command="{Binding ResetFiltersCommand}">
                            Reset
                        </Button>
                    </StackPanel>

                    <!-- ADD SUBJECT -->
                    <Button Grid.Column="1"
                            Width="140"
                            Height="40"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#2563EB"
                            Foreground="White"
                            Command="{Binding AddCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="BookPlus"
                                                     Width="18"
                                                     Height="18"
                                                     Margin="0,0,6,0"/>
                            <TextBlock Text="Add Subject"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!-- ================= GRID ================= -->
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding FilteredSubjects}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      RowHeight="48"
                      GridLinesVisibility="None"
                      Style="{StaticResource MaterialDesignDataGrid}">

                <DataGrid.Columns>

                    <DataGridTextColumn Header="Subject"
                                        Binding="{Binding SubjectName}"
                                        Width="2*"
                                        FontSize="10"/>

                    <DataGridTextColumn Header="Grade"
                                        Binding="{Binding GradeName}"
                                        Width="*"
                                        FontSize="10"/>

                    <DataGridTemplateColumn Header=""
                                            Width="72">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            Command="{Binding DataContext.EditCommand,
                                                RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}">
                                        <materialDesign:PackIcon Kind="PencilOutline"/>
                                    </Button>

                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            Command="{Binding DataContext.DeleteCommand,
                                                RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}">
                                        <materialDesign:PackIcon Kind="DeleteOutline"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
            <!-- ================= PAGINATION ================= -->
            <Border Grid.Row="2"
        Padding="8"
        Background="#F9FAFB"
        BorderBrush="#E5E7EB"
        BorderThickness="1,0,0,0">

                <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Right">

                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                Command="{Binding PrevPageCommand}"
                IsEnabled="{Binding CanGoPrevious}">
                        ◀ Prev
                    </Button>

                    <TextBlock Text="{Binding PageInfo}"
                   Margin="12,0"
                   VerticalAlignment="Center"/>

                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                Command="{Binding NextPageCommand}"
                IsEnabled="{Binding CanGoNext}">
                        Next ▶
                    </Button>
                </StackPanel>
            </Border>

            <!-- ================= SNACKBAR ================= -->
            <materialDesign:Snackbar Grid.RowSpan="3"
                                     MessageQueue="{Binding SnackbarMessageQueue}"
                                     VerticalAlignment="Bottom"/>
        </Grid>

        <!-- ================= ADD / EDIT DIALOG ================= -->
        <materialDesign:DialogHost.DialogContent>

            <materialDesign:Card Padding="24"
                          Width="420">

                <StackPanel>

                    <!-- TITLE -->
                    <TextBlock Text="{Binding DialogTitle}"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="0,0,0,16"/>

                    <!-- SUBJECT NAME -->
                    <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     materialDesign:HintAssist.Hint="Subject Name"
                     Text="{Binding EditSubject.SubjectName,
                            UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- GRADE (FIXED BINDING + FULL WIDTH) -->
                    <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      Margin="0,12,0,0"
                      ItemsSource="{Binding Grades}"
                      SelectedValue="{Binding EditSubject.GradeId}"
                      SelectedValuePath="GradeId"
                      DisplayMemberPath="GradeName"
                      materialDesign:HintAssist.Hint="Grade"/>

                    <!-- ACTIONS -->
                    <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,24,0,0">

                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}">
                            Cancel
                        </Button>

                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                        Margin="12,0,0,0"
                        Command="{Binding SaveCommand}">
                            Save
                        </Button>

                    </StackPanel>

                </StackPanel>
            </materialDesign:Card>

        </materialDesign:DialogHost.DialogContent>


    </materialDesign:DialogHost>
</UserControl>
