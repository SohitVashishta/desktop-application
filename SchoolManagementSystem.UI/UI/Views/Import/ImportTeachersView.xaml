<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.Import.ImportTeachersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Margin="30" Width="400">

        <!-- HEADER -->
        <TextBlock Text="Import Teachers"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- IMPORT BUTTON -->
        <Button Content="Select Excel File To Import"
                Height="40"
                Command="{Binding ImportCommand}"
                IsEnabled="{Binding IsImporting, Converter={StaticResource InverseBoolConverter}}"/>

        <!-- PROGRESS BAR -->
        <ProgressBar Height="22"
                     Margin="0,20,0,0"
                     Minimum="0"
                     Maximum="100"
                     Value="{Binding Progress}"
                     Visibility="{Binding IsImporting, Converter={StaticResource BoolToVisibilityConverter}}"/>

        <!-- PROGRESS TEXT -->
        <TextBlock Text="{Binding Progress, StringFormat={}{0}% completed}"
                   HorizontalAlignment="Center"
                   Margin="0,8,0,0"
                   FontWeight="SemiBold"
                   Visibility="{Binding IsImporting, Converter={StaticResource BoolToVisibilityConverter}}"/>

    </StackPanel>
</UserControl>
