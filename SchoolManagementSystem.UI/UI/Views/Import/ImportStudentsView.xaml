<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.Import.ImportStudentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Margin="30">

        <TextBlock Text="Import Students"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <Button Content="Select Excel File To Import"
                Width="280"
                Height="40"
                Command="{Binding ImportCommand}"
                IsEnabled="{Binding IsImporting, Converter={StaticResource InverseBoolConverter}}"/>

        <ProgressBar Height="22"
                     Margin="0,20,0,0"
                     Minimum="0"
                     Maximum="100"
                     Value="{Binding Progress}"
                     Visibility="{Binding IsImporting,
                        Converter={StaticResource BoolToVisibilityConverter}}"/>

        <TextBlock Text="{Binding Progress, StringFormat={}{0}% completed}"
                   HorizontalAlignment="Center"
                   Margin="0,5"
                   Visibility="{Binding IsImporting,
                        Converter={StaticResource BoolToVisibilityConverter}}"/>

    </StackPanel>
</UserControl>
