<Window x:Class="SchoolManagementSystem.UI.UI.Views.Library.IssueBookDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Issue Book"
        Height="420"
        Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F4F6F9">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ================= HEADER ================= -->
        <Border Background="#2C3E50"
                Height="40"
                CornerRadius="3">
            <TextBlock Text="Issue Book Entry"
                       Foreground="White"
                       VerticalAlignment="Center"
                       Margin="15,0"
                       FontSize="14"
                       FontWeight="SemiBold"/>
        </Border>

        <!-- ================= FORM SECTION ================= -->
        <Border Grid.Row="1"
                Background="White"
                BorderBrush="#D6DCE5"
                BorderThickness="1"
                Padding="15"
                Margin="0,10,0,10">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Student -->
                <StackPanel Grid.Row="0">
                    <TextBlock Text="Student" FontSize="11" Margin="0,0,0,3"/>
                    <ComboBox Height="30"
                              ItemsSource="{Binding Students}"
                              DisplayMemberPath="StudentName"
                              SelectedItem="{Binding SelectedStudent}"
                              FontSize="11"/>
                </StackPanel>

                <!-- Book -->
                <StackPanel Grid.Row="2">
                    <TextBlock Text="Book" FontSize="11" Margin="0,0,0,3"/>
                    <ComboBox Height="30"
                              ItemsSource="{Binding Books}"
                              DisplayMemberPath="Title"
                              SelectedItem="{Binding SelectedBook}"
                              FontSize="11"/>
                </StackPanel>

                <!-- Stock Info -->
                <TextBlock Grid.Row="3"
                           Text="{Binding StockInfo}"
                           FontSize="11"
                           Foreground="#C0392B"
                           Margin="2,5,0,0"/>

                <!-- Issue Date -->
                <StackPanel Grid.Row="4">
                    <TextBlock Text="Issue Date" FontSize="11" Margin="0,0,0,3"/>
                    <DatePicker SelectedDate="{Binding IssueDate}"
                                Height="30"
                                FontSize="11"/>
                </StackPanel>

                <!-- Due Date -->
                <StackPanel Grid.Row="6">
                    <TextBlock Text="Due Date" FontSize="11" Margin="0,0,0,3"/>
                    <DatePicker SelectedDate="{Binding DueDate}"
                                Height="30"
                                FontSize="11"
                                IsEnabled="False"/>
                </StackPanel>

            </Grid>
        </Border>

        <!-- ================= FOOTER ================= -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">

            <Button Content="Cancel"
                    Width="80"
                    Height="28"
                    Margin="0,0,10,0"
                    Command="{Binding CancelCommand}"/>

            <Button Content="Issue Book"
                    Width="100"
                    Height="28"
                    Background="#27AE60"
                    Foreground="White"
                    Command="{Binding SaveCommand}"
                    IsEnabled="{Binding IsFormValid}"/>
        </StackPanel>

    </Grid>
</Window>
