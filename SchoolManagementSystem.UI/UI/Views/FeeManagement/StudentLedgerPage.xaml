<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.FeeManagement.StudentLedgerPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <TextBlock Text="{Binding StudentName}"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Margin="0,0,0,12"/>

        <!-- LEDGER -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding LedgerRows}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="120"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="Debit" Binding="{Binding Debit}" Width="120"/>
                <DataGridTextColumn Header="Credit" Binding="{Binding Credit}" Width="120"/>
                <DataGridTextColumn Header="Balance" Binding="{Binding Balance}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
