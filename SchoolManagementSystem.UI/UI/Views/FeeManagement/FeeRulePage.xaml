<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.FeeManagement.FeeRulePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">

    <UserControl.Resources>
        <Style x:Key="RightAlignedCell" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Padding" Value="0,0,8,0"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= HEADER ================= -->
        <TextBlock Text="Fee Rules (Discount &amp; Due Date)"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Margin="0,0,0,16"/>

        <!-- ================= CONTENT ================= -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ================= LEFT FILTER PANEL ================= -->
            <StackPanel Margin="0,0,16,0">

                <ComboBox ItemsSource="{Binding AcademicYears}"
                          SelectedItem="{Binding SelectedAcademicYear}"
                          DisplayMemberPath="YearName"
                          md:HintAssist.Hint="Academic Year"/>

                <ComboBox ItemsSource="{Binding Classes}"
                          SelectedItem="{Binding SelectedClass}"
                          DisplayMemberPath="ClassName"
                          Margin="0,8,0,0"
                          md:HintAssist.Hint="Class"/>

                <ComboBox ItemsSource="{Binding Sections}"
                          SelectedItem="{Binding SelectedSection}"
                          DisplayMemberPath="SectionName"
                          Margin="0,8,0,0"
                          md:HintAssist.Hint="Section (Optional)"/>

                <ComboBox ItemsSource="{Binding FeeTypes}"
                          SelectedItem="{Binding SelectedFeeType}"
                          Margin="0,8,0,0"
                          md:HintAssist.Hint="Fee Type"/>

                <Button Content="Save Rules"
                        Command="{Binding SaveCommand}"
                        Margin="0,20,0,0"
                        Style="{StaticResource MaterialDesignRaisedButton}"/>
            </StackPanel>

            <!-- ================= RIGHT GRID ================= -->
            <Border Grid.Column="1"
                    Padding="8"
                    Background="{DynamicResource MaterialDesignPaper}"
                    CornerRadius="4"
                    md:ShadowAssist.ShadowDepth="Depth1">

                <DataGrid ItemsSource="{Binding Rules}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          RowHeight="36">

                    <DataGrid.Columns>

                        <!-- Fee Head -->
                        <DataGridTextColumn Header="Fee Head"
                                            Binding="{Binding FeeHeadName}"
                                            IsReadOnly="True"
                                            Width="*"/>

                        <!-- Discount Type -->
                        <DataGridComboBoxColumn Header="Discount Type"
                                                SelectedItemBinding="{Binding DiscountType, Mode=TwoWay}"
                                                ItemsSource="{Binding DataContext.DiscountTypes,
                                                RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                Width="150"/>

                        <!-- Discount Value -->
                        <DataGridTextColumn Header="Discount"
                                            Binding="{Binding DiscountValue, Mode=TwoWay}"
                                            Width="110"
                                            ElementStyle="{StaticResource RightAlignedCell}"/>

                        <!-- Due Day -->
                        <DataGridTextColumn Header="Due Day"
                                            Binding="{Binding DueDay, Mode=TwoWay}"
                                            Width="90"
                                            ElementStyle="{StaticResource RightAlignedCell}"/>

                        <!-- Grace Days -->
                        <DataGridTextColumn Header="Grace Days"
                                            Binding="{Binding GraceDays, Mode=TwoWay}"
                                            Width="110"
                                            ElementStyle="{StaticResource RightAlignedCell}"/>

                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
