<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.FeeManagement.PendingFeePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- FILTER -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
            <ComboBox ItemsSource="{Binding Classes}"
                      SelectedItem="{Binding SelectedClass}"
                      Width="180"/>

            <TextBox Text="{Binding MinDueAmount}"
                     Width="120"
                     Margin="8,0,0,0"
                     />

            <Button Content="Load"
                    Margin="12,0,0,0"
                    Command="{Binding LoadCommand}"/>
        </StackPanel>

        <!-- GRID -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Records}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Student" Binding="{Binding StudentName}" Width="*"/>
                <DataGridTextColumn Header="Class" Binding="{Binding ClassName}" Width="100"/>
                <DataGridTextColumn Header="Total Fee" Binding="{Binding TotalFee}" Width="120"/>
                <DataGridTextColumn Header="Paid" Binding="{Binding PaidAmount}" Width="120"/>
                <DataGridTextColumn Header="Pending" Binding="{Binding PendingAmount}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
