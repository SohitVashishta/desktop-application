<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.FeeManagement.DailyCollectionPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- FILTER -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
            <DatePicker SelectedDate="{Binding FromDate}"
                        md:HintAssist.Hint="From"/>
            <DatePicker SelectedDate="{Binding ToDate}"
                        Margin="8,0,0,0"
                        md:HintAssist.Hint="To"/>

            <Button Content="Search"
                    Margin="12,0,0,0"
                    Command="{Binding LoadCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>

        <!-- GRID -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Records}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  GridLinesVisibility="None">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Receipt No" Binding="{Binding ReceiptNo}" Width="120"/>
                <DataGridTextColumn Header="Student" Binding="{Binding StudentName}" Width="*"/>
                <DataGridTextColumn Header="Class" Binding="{Binding ClassName}" Width="100"/>
                <DataGridTextColumn Header="Mode" Binding="{Binding PaymentMode}" Width="100"/>
                <DataGridTextColumn Header="Amount" Binding="{Binding PaidAmount}" Width="120"/>
                <DataGridTextColumn Header="Time" Binding="{Binding PaymentTime}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
