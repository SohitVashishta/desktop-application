<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.FeeManagement.FeeHeadMasterPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchoolManagementSystem.UI.UI.Views.FeeManagement"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
   
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <DockPanel Margin="0,0,0,12">
            <TextBlock Text="Fee Head Master"
                       FontSize="20"
                       FontWeight="Bold"/>

            <Button DockPanel.Dock="Right"
                    Content="Add Fee Head"
                    Command="{Binding AddNewCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </DockPanel>

        <!-- GRID -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding FeeHeads}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True">

            <DataGrid.Columns>

                <DataGridTextColumn Header="Fee Head Name"
                                    Binding="{Binding FeeHeadName}"
                                    Width="*"/>

                <DataGridCheckBoxColumn Header="Mandatory"
                                        Binding="{Binding IsMandatory}"/>

                <DataGridCheckBoxColumn Header="Refundable"
                                        Binding="{Binding IsRefundable}"/>

                <DataGridCheckBoxColumn Header="Active"
                                        Binding="{Binding IsActive}"/>

                <!-- ACTIONS -->
                <DataGridTemplateColumn Header="Actions" Width="160">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Edit"
                                        Command="{Binding DataContext.EditCommand,
                                                  RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        Margin="0,0,8,0"/>

                                <Button Content="Delete"
                                        Command="{Binding DataContext.DeleteCommand,
                                                  RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
