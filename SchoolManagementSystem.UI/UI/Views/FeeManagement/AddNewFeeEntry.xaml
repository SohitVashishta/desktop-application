<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.FeeManagement.AddNewFeeEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchoolManagementSystem.UI.UI.Views.FeeManagement"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1800">
    <Grid Background="#80000000" >

        <Border Width="520"
                Padding="24"
                Background="White"
                
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <ScrollViewer VerticalScrollBarVisibility="Auto">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- HEADER -->
                    <StackPanel Grid.Row="0">
                        <TextBlock Text="Add New Fee"
                                   FontSize="18"
                                   FontWeight="SemiBold"/>

                        <TextBlock Text="Enter the details for the new fee structure."
                                   FontSize="12"
                                   Foreground="#6B7280"
                                   Margin="0,6,0,20"/>
                    </StackPanel>

                    <!-- FORM -->
                    <StackPanel Grid.Row="1">

                        <!-- Fee Type -->
                        <TextBlock Text="Fee Type" FontSize="12"/>
                        <Border CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1">
                            <TextBox Height="40"
                                     BorderThickness="0"
                                     Padding="12,6"
                                     FontSize="12"
                                     Text="{Binding FeeType}"/>
                        </Border>

                        <!-- Amount -->
                        <TextBlock Text="Amount" FontSize="12" Margin="0,16,0,4"/>
                        <Border CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1">
                            <TextBox Height="40"
                                     BorderThickness="0"
                                     Padding="12,6"
                                     FontSize="12"
                                     Text="{Binding Amount}"/>
                        </Border>

                        <!-- Frequency -->
                        <TextBlock Text="Frequency" FontSize="12" Margin="0,16,0,4"/>
                        <Border CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1">
                            <ComboBox Height="40"
                                      BorderThickness="0"
                                      Padding="8"
                                      FontSize="12"
                                      ItemsSource="{Binding FrequencyList}"
                                      SelectedItem="{Binding SelectedFrequency}"/>
                        </Border>

                        <!-- Applicable Class -->
                        <TextBlock Text="Applicable Class" FontSize="12" Margin="0,16,0,4"/>
                        <Border CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1">
                            <ComboBox Height="40"
                                      BorderThickness="0"
                                      Padding="8"
                                      FontSize="12"
                                      ItemsSource="{Binding ClassList}"
                                      SelectedItem="{Binding SelectedClass}"
DisplayMemberPath="ClassName"/>
                        </Border>

                        <!-- Due Date -->
                        <TextBlock Text="Due Date" FontSize="12" Margin="0,16,0,4"/>
                        <Border CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1">
                            <DatePicker Height="40"
                                        BorderThickness="0"
                                        Padding="8"
                                        FontSize="12"
                                        SelectedDate="{Binding DueDate}"/>
                        </Border>

                        <!-- Description -->
                        <TextBlock Text="Description" FontSize="12" Margin="0,16,0,4"/>
                        <Border CornerRadius="8"
                                BorderBrush="#E5E7EB"
                                BorderThickness="1"
                                MinHeight="100">
                            <TextBox BorderThickness="0"
                                     Padding="12"
                                     FontSize="12"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     Text="{Binding Description}"/>
                        </Border>

                    </StackPanel>

                    <!-- FOOTER -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,24,0,0">

                        <Button Width="90"
        Height="36"
        Margin="0,0,12,0"
        Content="Cancel"
        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"/>


                        <Button Width="100"
                                Height="36"
                                Background="#3B82F6"
                                Foreground="White"
                                BorderThickness="0"
                                Content="Save Fee"
                                Command="{Binding SaveCommand}"/>
                    </StackPanel>

                </Grid>

            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
