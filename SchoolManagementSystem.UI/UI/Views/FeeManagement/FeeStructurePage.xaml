<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.FeeManagement.FeeStructurePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:views="clr-namespace:SchoolManagementSystem.UI.UI.Views.FeeManagement">
    <!-- ================= RESOURCES ================= -->
    <UserControl.Resources>

        <Style x:Key="CenterCellText" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CenterHeaderText" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

    </UserControl.Resources>
    <materialDesign:DialogHost
        Identifier="RootDialog"
        IsOpen="{Binding IsAddFeeDialogOpen}">

        <!-- ================= MAIN PAGE ================= -->
        <Grid Background="#F3F4F6">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Toolbar -->
                <RowDefinition Height="Auto"/>
                <!-- KPI cards -->
                <RowDefinition Height="*"/>
                <!-- DataGrid -->
                <RowDefinition Height="Auto"/>
                <!-- Pagination -->
            </Grid.RowDefinitions>

            <!-- TOOLBAR -->
            <Border Grid.Row="0"
                    Background="#F9FAFB"
                    Padding="12"
                    BorderBrush="#E5E7EB"
                    BorderThickness="0,0,0,1">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- SEARCH -->
                    <TextBox Width="320"
                             Height="40"
                             Padding="12,8"
                             FontSize="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Search Fee"
                             Text="{Binding SearchText}"/>

                    <!-- ADD FEE -->
                    <Button Grid.Column="1"
                            Width="140"
                            Height="40"
                            Margin="12,0,0,0"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#2563EB"
                            Foreground="White"
                            Command="{Binding OpenAddFeeDialogCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" Width="18" Height="18" Margin="0,0,6,0"/>
                            <TextBlock Text="Add Fee" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!-- ================= KPI CARDS ================= -->
            <UniformGrid Grid.Row="1"
                     Columns="4"
                     Margin="16,12,16,12">

                <Border Background="#2C3E50" CornerRadius="6" Margin="8" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Total Fees" Foreground="White" FontSize="12"/>
                        <TextBlock Text="{Binding TotalFeesCount}"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="White"/>
                    </StackPanel>
                </Border>

                <Border Background="#16A085" CornerRadius="6" Margin="8" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Monthly Fees" Foreground="White" FontSize="12"/>
                        <TextBlock Text="{Binding MonthlyFeesCount}"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="White"/>
                    </StackPanel>
                </Border>

                <Border Background="#2980B9" CornerRadius="6" Margin="8" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Annual Fees" Foreground="White" FontSize="12"/>
                        <TextBlock Text="{Binding AnnualFeesCount}"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="White"/>
                    </StackPanel>
                </Border>

                <Border Background="#8E44AD" CornerRadius="6" Margin="8" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Active Classes" Foreground="White" FontSize="12"/>
                        <TextBlock Text="{Binding TotalClasses}"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="White"/>
                    </StackPanel>
                </Border>

            </UniformGrid>

            <!-- ================= GRID CARD ================= -->
            <Border Grid.Row="2"
                Margin="0"
                
                CornerRadius="6"
               
                BorderThickness="1">

                <DataGrid ItemsSource="{Binding FeeDetails}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      RowHeight="48"
                      GridLinesVisibility="None"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      Style="{StaticResource MaterialDesignDataGrid}">

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="Fee Name"
                                        Binding="{Binding FeeHeadName}"
                                        Width="240"
                                        FontSize="10" 
HeaderStyle="{StaticResource CenterHeaderText}"/>

                        <DataGridTextColumn Header="Class"
                                        Binding="{Binding ClassName}"
                                        Width="240"
                                        FontSize="10" ElementStyle="{StaticResource CenterCellText}"
HeaderStyle="{StaticResource CenterHeaderText}"/>

                        <DataGridTextColumn Header="Frequency"
                                        Binding="{Binding Frequency}"
                                        Width="220"
                                        FontSize="10" ElementStyle="{StaticResource CenterCellText}"
HeaderStyle="{StaticResource CenterHeaderText}"/>

                        <DataGridTextColumn Header="Amount"
                                        Binding="{Binding Amount}"
                                        Width="220"
                                        FontSize="10" ElementStyle="{StaticResource CenterCellText}"
HeaderStyle="{StaticResource CenterHeaderText}"/>



                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- ================= PAGINATION ================= -->
            <Border Grid.Row="3"
                Padding="8"
                Background="#F9FAFB"
                BorderBrush="#E5E7EB"
                BorderThickness="1,0,0,0">

                <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">

                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{Binding PrevPageCommand}"
                        IsEnabled="{Binding CanGoPrevious}">
                        ◀ Prev
                    </Button>

                    <TextBlock Text="{Binding PageInfo}"
                           Margin="12,0"
                           VerticalAlignment="Center"/>

                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{Binding NextPageCommand}"
                        IsEnabled="{Binding CanGoNext}">
                        Next ▶
                    </Button>
                </StackPanel>
            </Border>

            <!-- ================= SNACKBAR ================= -->
            <materialDesign:Snackbar Grid.RowSpan="4"
                                 MessageQueue="{Binding SnackbarMessageQueue}"
                                 VerticalAlignment="Bottom"/>

        </Grid>

        <!-- ================= DIALOG CONTENT ================= -->
        <materialDesign:DialogHost.DialogContent>
            <views:AddNewFeeEntry/>
        </materialDesign:DialogHost.DialogContent>

    </materialDesign:DialogHost>
</UserControl>
