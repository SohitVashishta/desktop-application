<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.FeeManagement.FeeStructurePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">

    <UserControl.Resources>
        <Style x:Key="RightAlignedCell" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Padding" Value="0,0,8,0"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <TextBlock Text="Fee Structure"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Margin="0,0,0,16"/>

        <!-- CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT FORM -->
            <StackPanel Margin="0,0,16,0">

                <ComboBox ItemsSource="{Binding AcademicYears}"
                          SelectedItem="{Binding SelectedAcademicYear}"
                          DisplayMemberPath="YearName"
                          md:HintAssist.Hint="Academic Year"/>

                <ComboBox ItemsSource="{Binding Classes}"
                          SelectedItem="{Binding SelectedClass}"
                          DisplayMemberPath="ClassName"
                          Margin="0,8,0,0"
                          md:HintAssist.Hint="Class"/>

                <ComboBox ItemsSource="{Binding Sections}"
                          SelectedItem="{Binding SelectedSection}"
                          DisplayMemberPath="SectionName"
                          Margin="0,8,0,0"
                          md:HintAssist.Hint="Section (Optional)"/>

                <!-- ✅ FeeType FIXED -->
                <ComboBox ItemsSource="{Binding FeeTypes}"
                          SelectedItem="{Binding SelectedFeeType, Mode=TwoWay}"
                          Margin="0,8,0,0"
                          md:HintAssist.Hint="Fee Type"/>

                <!-- ✅ Pass DataGrid as CommandParameter -->
                <Button Content="Save Fee Structure"
                        Command="{Binding SaveCommand}"
                        CommandParameter="{Binding ElementName=FeeGrid}"
                        Margin="0,20,0,0"
                        Style="{StaticResource MaterialDesignRaisedButton}"/>
            </StackPanel>

            <!-- RIGHT GRID -->
            <Border Grid.Column="1"
                    Padding="8"
                    Background="{DynamicResource MaterialDesignPaper}"
                    CornerRadius="4"
                    md:ShadowAssist.ShadowDepth="Depth1">

                <!-- ✅ Named DataGrid -->
                <DataGrid x:Name="FeeGrid"
                          ItemsSource="{Binding FeeHeadAmounts}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          RowHeight="36">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Fee Head"
                                            Binding="{Binding FeeHeadName}"
                                            IsReadOnly="True"
                                            Width="*"/>

                        <DataGridTextColumn Header="Amount (₹)"
                                            Binding="{Binding Amount, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                            Width="140"
                                            ElementStyle="{StaticResource RightAlignedCell}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
