<Page x:Class="SchoolManagementSystem.UI.UI.Views.FeeManagement.FeeReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SchoolManagementSystem.UI.UI.Views.FeeManagement"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FeeReportPage">

    <DataGrid ItemsSource="{Binding Reports}"
          AutoGenerateColumns="False"
          IsReadOnly="True">

        <DataGrid.Columns>
            <DataGridTextColumn Header="Student"
                            Binding="{Binding StudentName}"/>

            <DataGridTextColumn Header="Class"
                            Binding="{Binding ClassName}"/>

            <DataGridTextColumn Header="Total Fees"
                            Binding="{Binding TotalFees}"/>

            <DataGridTextColumn Header="Concession"
                            Binding="{Binding Concession}"/>

            <DataGridTextColumn Header="Paid"
                            Binding="{Binding PaidFees}"/>

            <DataGridTextColumn Header="Balance"
                            Binding="{Binding BalanceFees}"/>

            <DataGridTextColumn Header="Payment Date"
                            Binding="{Binding PaymentDate}"/>

            <DataGridTextColumn Header="Mode"
                            Binding="{Binding PaymentMode}"/>
        </DataGrid.Columns>
    </DataGrid>

</Page>
