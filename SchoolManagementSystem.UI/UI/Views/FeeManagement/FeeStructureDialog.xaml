<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.FeeManagement.FeeStructureDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">

    <StackPanel Margin="16" Width="400">
        <TextBlock Text="Fee Structure" FontSize="18" Margin="0,0,0,12"/>

        <ComboBox Height="32" Padding="8,5"
                  ItemsSource="{Binding AcademicYears}"
                  SelectedItem="{Binding SelectedAcademicYear}" />

        <ComboBox Height="32" Padding="8,5"
                  ItemsSource="{Binding Classes}"
                  SelectedItem="{Binding SelectedClass}"
                  Margin="0,8,0,0"/>

        <ComboBox Height="32" Padding="8,5"
                  ItemsSource="{Binding FeeTypes}"
                  SelectedItem="{Binding FeeType}"
                  Margin="0,8,0,0"/>

        <ItemsControl ItemsSource="{Binding FeeHeadAmounts}" Margin="0,12,0,0">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <DockPanel Margin="0,4">
                        <TextBlock Text="{Binding FeeHeadName}" Width="150"/>
                        <TextBox Text="{Binding Amount}" Width="100"/>
                    </DockPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Save" Command="{Binding SaveCommand}"/>
            <Button Content="Cancel"
                    Command="{x:Static md:DialogHost.CloseDialogCommand}"
                    Margin="8,0,0,0"/>
        </StackPanel>
    </StackPanel>
</UserControl>
