<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.FeeManagement.FeeDiscountPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchoolManagementSystem.UI.UI.Views.FeeManagement"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#F3F4F6">

        <Border Background="White" Padding="12" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
            <StackPanel>
                <TextBlock Text="Discounts &amp; Due Dates"
                           FontSize="20" FontWeight="SemiBold"/>
                <TextBlock Text="Configure discounts and due rules"
                           FontSize="12" Foreground="#6B7280"/>
            </StackPanel>
        </Border>

        <Border Margin="16" Background="White" Padding="12" CornerRadius="6">

            <DataGrid AutoGenerateColumns="False"
                      ItemsSource="{Binding Discounts}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Discount Name" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}"/>
                    <DataGridTextColumn Header="Value" Binding="{Binding Value}"/>
                    <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}"/>
                </DataGrid.Columns>
            </DataGrid>

        </Border>
    </Grid>
</UserControl>
