<Window x:Class="SchoolManagementSystem.UI.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="School Management System"
        Height="650"
        Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">

    <!-- ================= RESOURCES ================= -->
    <Window.Resources>

        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- ================= MAIN MENU BUTTON ================= -->
        <Style x:Key="MenuHeaderButtonStyle"
       TargetType="Button"
       BasedOn="{StaticResource MaterialDesignFlatButton}">

            <Setter Property="Height" Value="44"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="#111827"/>
            <Setter Property="Foreground" Value="#CBD5E1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                        Background="{TemplateBinding Background}"
                        CornerRadius="6">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="44"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="24"/>
                                </Grid.ColumnDefinitions>

                                <!-- ICON -->
                                <materialDesign:PackIcon
                            Grid.Column="0"
                            Kind="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag}"
                            Width="18"
                            Height="18"
                            Foreground="#CBD5E1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>

                                <!-- TEXT -->
                                <TextBlock Grid.Column="1"
                                   Text="{TemplateBinding Content}"
                                   VerticalAlignment="Center"
                                   Foreground="{TemplateBinding Foreground}"
                                   Visibility="{Binding DataContext.IsSidebarExpanded,
                                       RelativeSource={RelativeSource AncestorType=Window},
                                       Converter={StaticResource BoolToVisibilityConverter}}"/>

                                <!-- CHEVRON (optional, for expander only) -->
                                <materialDesign:PackIcon Grid.Column="2"
                                                 Kind="ChevronDown"
                                                 Width="16"
                                                 Height="16"
                                                 Foreground="#94A3B8"
                                                 Visibility="{TemplateBinding IsEnabled}"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Hover only (NO blue press) -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1E293B"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- ================= SUB MENU BUTTON ================= -->
        <Style x:Key="SubMenuButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource MaterialDesignFlatButton}">

            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0,3,0,0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="#111827"/>
            <Setter Property="Foreground" Value="#CBD5E1"/>
            <Setter Property="FontSize" Value="11"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="44"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- ✅ ICON (FIXED) -->
                                <materialDesign:PackIcon
                                    Grid.Column="0"
                                    Kind="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag}"
                                    Width="14"
                                    Height="14"
                                    Foreground="#9CA3AF"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>

                                <!-- TEXT -->
                                <TextBlock Grid.Column="1"
                                           Text="{TemplateBinding Content}"
                                           VerticalAlignment="Center"
                                           Foreground="{TemplateBinding Foreground}"
                                           Visibility="{Binding DataContext.IsSidebarExpanded,
                                               RelativeSource={RelativeSource AncestorType=Window},
                                               Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1E293B"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!-- ================= LAYOUT ================= -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="330"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ================= SIDEBAR ================= -->
        <Border Grid.Column="0" Background="#111827">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- BRAND -->
                <StackPanel Grid.Row="0" Margin="5">
                    <TextBlock Text="School MS"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Text="{Binding Username}"
                               FontSize="12"
                               Foreground="#9CA3AF"
                               Visibility="{Binding IsSidebarExpanded,
                                   Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>

                <!-- MENU -->
                <ScrollViewer Grid.Row="1">
                    <StackPanel>

                        <!-- Dashboard -->
                        <Button Content="Dashboard"
                                Tag="ViewDashboardOutline"
                                Style="{StaticResource MenuHeaderButtonStyle}"
                                Click="Dashboard_Click" FontSize="12" Margin="0,0,0,0" />

                        <!-- ADMINISTRATION -->
                        <Expander Header="User &amp; Role Management"
          IsExpanded="False"
          Margin="0"
          Visibility="{Binding IsAdmin,
              Converter={StaticResource BoolToVisibilityConverter}}"
          Background="Transparent">

                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ShieldAccountOutline"
                Width="18"
                Height="18"
                Foreground="#CBD5E1"/>
                                        <TextBlock Text="User &amp; Role Management"
  Margin="3,0,0,0"
  Foreground="#CBD5E1"
  Visibility="{Binding DataContext.IsSidebarExpanded,
      RelativeSource={RelativeSource AncestorType=Window},
      Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Expander.HeaderTemplate>

                            <!-- SUBMENU stays indented -->
                            <StackPanel>
                                <Button Content="Manage Users"
                Tag="AccountMultipleOutline"
                Style="{StaticResource SubMenuButtonStyle}"  Click="ManageUsers_Click"/>

                                <Button Content="Assign Roles &amp; Permissions"
                Tag="ShieldKeyOutline"
                Style="{StaticResource SubMenuButtonStyle}"  Click="AssignRoles_Click"/>

                                <Button Content="Reset Passwords"
                Tag="LockReset"
                Style="{StaticResource SubMenuButtonStyle}"  Click="ResetPasswords_Click"/>

                                <Button Content="Portal Access Control"
                Tag="Security"
                Style="{StaticResource SubMenuButtonStyle}"  Click="PortalAccess_Click"/>
                            </StackPanel>
                        </Expander>
                      
                        <!-- Student Management -->
                        <Expander Header="Student Management"
           IsExpanded="False"
           Visibility="{Binding IsAdmin,
               Converter={StaticResource BoolToVisibilityConverter}}" Background="Black">

                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="SchoolOutline"
                                          Width="18"
                                          Height="18"
                                          Foreground="#CBD5E1"/>
                                        <TextBlock Text="Student Management"
                            Margin="3,0,0,0"
                            Foreground="#CBD5E1"
                            Visibility="{Binding DataContext.IsSidebarExpanded,
                                RelativeSource={RelativeSource AncestorType=Window},
                                Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Expander.HeaderTemplate>

                            <StackPanel>
                                <Button Content="Academic Year"
Tag="AccountDetailsOutline"
Style="{StaticResource SubMenuButtonStyle}"
Click="OpenAcademicYearPage_Click"/>
                                <Button Content="Classes"
Tag="AccountDetailsOutline"
Style="{StaticResource SubMenuButtonStyle}"
Click="OpenClassMasterPage_Click"/>
                                <Button Content="Sections"
Tag="AccountDetailsOutline"
Style="{StaticResource SubMenuButtonStyle}"
Click="OpenSectionPage_Click"/>
                                <Button Content="Subjects"
Tag="AccountDetailsOutline"
Style="{StaticResource SubMenuButtonStyle}"
Click="OpenSubjectPage_Click"/>
                                <Button Content="Class-Section Mapping"
Tag="AccountDetailsOutline"
Style="{StaticResource SubMenuButtonStyle}"
Click="OpenClassSectionMappingPage_Click"/>
                                <Button Content="Class-Subject Mapping"
Tag="AccountDetailsOutline"
Style="{StaticResource SubMenuButtonStyle}"
Click="OpenClassSubjectMappingPage_Click"/>
                                <Button Content="Student Admission"
Tag="AccountDetailsOutline"
Style="{StaticResource SubMenuButtonStyle}"
Click="OpenStudentAdmissionPage_Click"/>
                                <Button Content="Student Profiles"
                 Tag="AccountDetailsOutline"
                 Style="{StaticResource SubMenuButtonStyle}"
                 Click="OpenStudentProfiles_Click"/>

                                <Button Content="Class/Section Assignment"
                 Tag="AccountGroupOutline"
                 Style="{StaticResource SubMenuButtonStyle}"
                 Click="OpenClassSectionAssignment_Click"/>

                                <Button Content="Academic Year Mapping"
                 Tag="CalendarRangeOutline"
                 Style="{StaticResource SubMenuButtonStyle}"
                 Click="OpenAcademicYearMapping_Click"/>

                                <Button Content="Enrollment &amp; Transfers"
