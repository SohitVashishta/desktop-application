                 Click="ExaminationGrading_Click"/>

                                <Button Content="Subjects &amp; Schedules"
                 Tag="BookOpenOutline"
                 Style="{StaticResource SubMenuButtonStyle}"
                 Click="AssignRoles_Click"/>

                                <Button Content="Grading Rules"
                 Tag="PercentOutline"
                 Style="{StaticResource SubMenuButtonStyle}"
                 Click="ResetPasswords_Click"/>

                                <Button Content="Approve Marks"
                 Tag="CheckDecagramOutline"
                 Style="{StaticResource SubMenuButtonStyle}"
                                        
                 Click="PortalAccess_Click"/>
                                <Button Content="Report Cards &amp; Rankings"
Tag="FileCertificateOutline"
Style="{StaticResource SubMenuButtonStyle}"
                       
Click="PortalAccess_Click"/>
                            </StackPanel>
                        </Expander>
                        <!-- Fee Management -->
                        <Expander Header="Fee Management"
           IsExpanded="False"
           Visibility="{Binding IsAdmin,
               Converter={StaticResource BoolToVisibilityConverter}}" Background="Black">

                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="CurrencyInr"
                                          Width="18"
                                          Height="18"
                                          Foreground="#CBD5E1"/>
                                        <TextBlock Text="Fee Management"
                            Margin="3,0,0,0"
                            Foreground="#CBD5E1"
                            Visibility="{Binding DataContext.IsSidebarExpanded,
                                RelativeSource={RelativeSource AncestorType=Window},
                                Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Expander.HeaderTemplate>

                            <StackPanel>
                                <Button Content="Fee Structure"
                 Tag="CashMultiple"
                 Style="{StaticResource SubMenuButtonStyle}"
                 Click="FeeManagement_Click"/>

                                <Button Content="Discounts &amp; Due Dates"
                 Tag="BellOutline"
                 Style="{StaticResource SubMenuButtonStyle}"
                 Click="AssignRoles_Click"/>

                                <Button Content="Payments &amp; Dues"
                 Tag="CashCheck"
                 Style="{StaticResource SubMenuButtonStyle}"
                 Click="ResetPasswords_Click"/>

                                <Button Content="Receipts &amp; Reports"
                 Tag="ReceiptOutline"
                 Style="{StaticResource SubMenuButtonStyle}"
                                        
                 Click="PortalAccess_Click"/>
                                <Button Content="Payment Reminders"
Tag="BellOutline"
Style="{StaticResource SubMenuButtonStyle}"
                       
Click="PortalAccess_Click"/>
                            </StackPanel>
                        </Expander>
                        <!-- Timetable Management -->
                        <Expander Header="Timetable Management"
           IsExpanded="False"
           Visibility="{Binding IsAdmin,
               Converter={StaticResource BoolToVisibilityConverter}}" Background="Black">

                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="CalendarClockOutline"
                                          Width="18"
                                          Height="18"
                                          Foreground="#CBD5E1"/>
                                        <TextBlock Text="Timetable Management"
                            Margin="3,0,0,0"
                            Foreground="#CBD5E1"
                            Visibility="{Binding DataContext.IsSidebarExpanded,
                                RelativeSource={RelativeSource AncestorType=Window},
                                Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Expander.HeaderTemplate>

                            <StackPanel>
                                <Button Content="Class Timetable"
                 Tag="CalendarTextOutline"
                 Style="{StaticResource SubMenuButtonStyle}"
                 Click="FeeManagement_Click"/>

                                <Button Content="Teacher Assignments"
                 Tag="AccountSwitchOutline"
                 Style="{StaticResource SubMenuButtonStyle}"
                 Click="AssignRoles_Click"/>

                                <Button Content="Conflict Detection"
                 Tag="AlertCircleOutline"
                 Style="{StaticResource SubMenuButtonStyle}"
                 Click="ResetPasswords_Click"/>
                                <Button Content="Period Configuration"
Tag="AlertCircleOutline"
Style="{StaticResource SubMenuButtonStyle}"
Click="ResetPasswords_Click"/>
                                <Button Content="Teacher Timetable"
Tag="AlertCircleOutline"
Style="{StaticResource SubMenuButtonStyle}"
Click="ResetPasswords_Click"/>


                            </StackPanel>
                        </Expander>
                        <!-- Communication Notifications -->
                        <Expander Header="Communication &amp; Notifications"
           IsExpanded="False"
           Visibility="{Binding IsAdmin,
               Converter={StaticResource BoolToVisibilityConverter}}" Background="Black">

                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="MessageTextOutline"
                                          Width="18"
                                          Height="18"
                                          Foreground="#CBD5E1"/>
                                        <TextBlock Text="Communication &amp; Notifications"
                            Margin="3,0,0,0"
                            Foreground="#CBD5E1"
                            Visibility="{Binding DataContext.IsSidebarExpanded,
                                RelativeSource={RelativeSource AncestorType=Window},
                                Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Expander.HeaderTemplate>

                            <StackPanel>
                                <Button Content="Announcements"
                 Tag="BullhornOutline"
                 Style="{StaticResource SubMenuButtonStyle}"
                 Click="FeeManagement_Click"/>

                                <Button Content="Emergency Alerts"
                 Tag="AlertOctagonOutline"
                 Style="{StaticResource SubMenuButtonStyle}"
                 Click="AssignRoles_Click"/>

                                <Button Content="Messaging System"
                 Tag="MessageOutline"
                 Style="{StaticResource SubMenuButtonStyle}"
                 Click="ResetPasswords_Click"/>

                                <Button Content="Email / SMS Templates"
                 Tag="ShieldKey"
                 Style="{StaticResource SubMenuButtonStyle}"
                                        
                 Click="PortalAccess_Click"/>

                            </StackPanel>
                        </Expander>
                        <!-- Library Management -->
                        <Expander Header="Library Management"
           IsExpanded="False"
           Visibility="{Binding IsAdmin,
               Converter={StaticResource BoolToVisibilityConverter}}" Background="Black">

                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="LibraryShelves"
                                          Width="18"
                                          Height="18"
                                          Foreground="#CBD5E1"/>
                                        <TextBlock Text="Library Management"
                            Margin="3,0,0,0"
                            Foreground="#CBD5E1"
                            Visibility="{Binding DataContext.IsSidebarExpanded,
                                RelativeSource={RelativeSource AncestorType=Window},
                                Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Expander.HeaderTemplate>

                            <StackPanel>
                                <Button Content="Book Inventory"
                 Tag="Bookshelf"
                 Style="{StaticResource SubMenuButtonStyle}"
                 Click="FeeManagement_Click"/>

                                <Button Content="Issue / Return History"
                 Tag="BookArrowLeftRight"
                 Style="{StaticResource SubMenuButtonStyle}"
                 Click="AssignRoles_Click"/>

                                <Button Content="Overdue Tracking"
                 Tag="ClockAlertOutline"
                 Style="{StaticResource SubMenuButtonStyle}"
                 Click="ResetPasswords_Click"/>


                            </StackPanel>
                        </Expander>
                        <!-- HR &amp; Payroll -->
                        <Expander Header="HR &amp; Payroll"
           IsExpanded="False"
           Visibility="{Binding IsAdmin,
               Converter={StaticResource BoolToVisibilityConverter}}" Background="Black">

                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="AccountTieOutline"
                                          Width="18"
                                          Height="18"
                                          Foreground="#CBD5E1"/>
                                        <TextBlock Text="HR &amp; Payroll"
                            Margin="3,0,0,0"
                            Foreground="#CBD5E1"
                            Visibility="{Binding DataContext.IsSidebarExpanded,
                                RelativeSource={RelativeSource AncestorType=Window},
                                Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Expander.HeaderTemplate>

                            <StackPanel>
                                <Button Content="Staff Profiles"
                 Tag="BadgeAccountOutline"
                 Style="{StaticResource SubMenuButtonStyle}"
                 Click="FeeManagement_Click"/>

                                <Button Content="Staff Attendance"
                 Tag="CashSync"
                 Style="{StaticResource SubMenuButtonStyle}"
                 Click="AssignRoles_Click"/>

                                <Button Content="Payroll Processing"
                 Tag="CashSync"
                 Style="{StaticResource SubMenuButtonStyle}"
                 Click="ResetPasswords_Click"/>

                                <Button Content="Tax &amp; Deductions"
                 Tag="PercentOutline"
                 Style="{StaticResource SubMenuButtonStyle}"
                                        
                 Click="PortalAccess_Click"/>


                            </StackPanel>
                        </Expander>
                        <!-- Inventory Assets -->
                        <Expander Header="Inventory &amp; Assets"
           IsExpanded="False"
           Visibility="{Binding IsAdmin,
               Converter={StaticResource BoolToVisibilityConverter}}" Background="Black">

                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Warehouse"
                                          Width="18"
                                          Height="18"
                                          Foreground="#CBD5E1"/>
                                        <TextBlock Text="Inventory &amp; Assets"
                            Margin="3,0,0,0"
                            Foreground="#CBD5E1"
                            Visibility="{Binding DataContext.IsSidebarExpanded,
                                RelativeSource={RelativeSource AncestorType=Window},
                                Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Expander.HeaderTemplate>

                            <StackPanel>
                                <Button Content="Assets &amp; Equipment"
                 Tag="DesktopTowerMonitor"
                 Style="{StaticResource SubMenuButtonStyle}"
                 Click="FeeManagement_Click"/>

                                <Button Content="Purchase Logs"
                 Tag="FileDocumentOutline"
                 Style="{StaticResource SubMenuButtonStyle}"
                 Click="AssignRoles_Click"/>

                                <Button Content="Maintenance Records"
                 Tag="Tools"
                 Style="{StaticResource SubMenuButtonStyle}"
                 Click="ResetPasswords_Click"/>

                            </StackPanel>
                        </Expander>
                        <Expander Header="System &amp; Security"
IsExpanded="False"
Visibility="{Binding IsAdmin,
    Converter={StaticResource BoolToVisibilityConverter}}" Background="Black">

                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ShieldLockOutline"
                               Width="18"
                               Height="18"
                               Foreground="#CBD5E1"/>
                                        <TextBlock Text="System &amp; Security"
                 Margin="3,0,0,0"
                 Foreground="#CBD5E1"
                 Visibility="{Binding DataContext.IsSidebarExpanded,
                     RelativeSource={RelativeSource AncestorType=Window},
                     Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Expander.HeaderTemplate>

                            <StackPanel>
                                <Button Content="Assets &amp; Equipment"
      Tag="DesktopTowerMonitor"
      Style="{StaticResource SubMenuButtonStyle}"
      Click="FeeManagement_Click"/>

                                <Button Content="System Settings"
      Tag="Cogs"
      Style="{StaticResource SubMenuButtonStyle}"
      Click="AssignRoles_Click"/>

                                <Button Content="Backups"
      Tag="BackupRestore"
      Style="{StaticResource SubMenuButtonStyle}"
      Click="ResetPasswords_Click"/>
                                <Button Content="Performance Monitoring"
Tag="ChartLine"
Style="{StaticResource SubMenuButtonStyle}"
Click="ResetPasswords_Click"/>

                            </StackPanel>
                        </Expander>
                        <!-- ================= TEACHER ================= -->
                        <Expander Header="Teacher"
IsExpanded="False"
Visibility="{Binding IsTeacher,
    Converter={StaticResource BoolToVisibilityConverter}}" Background="Black">

                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ShieldAccount"
                               Width="18"
                               Height="18"
                               Foreground="#CBD5E1"/>
                                        <TextBlock Text="Teacher"
                 Margin="3,0,0,0"
                 Foreground="#CBD5E1"
                 Visibility="{Binding DataContext.IsSidebarExpanded,
                     RelativeSource={RelativeSource AncestorType=Window},
                     Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Expander.HeaderTemplate>

                            <StackPanel>
                                <Button Content="My Students"
      Tag="AccountMultiple"
      Style="{StaticResource SubMenuButtonStyle}"
      Click="Students_Click"/>

                                <Button Content="Mark Attendance"
      Tag="ShieldAccount"
      Style="{StaticResource SubMenuButtonStyle}"
      Click="Attendance_Click"/>

                                <Button Content="Enter Marks"
      Tag="LockReset"
      Style="{StaticResource SubMenuButtonStyle}"
      Click="TeacherMarks_Click"/>


                            </StackPanel>
                        </Expander>
                        <!-- ================= Student Information ================= -->
                        <Expander Header="Student Information"
IsExpanded="False"
Visibility="{Binding IsTeacher,
    Converter={StaticResource BoolToVisibilityConverter}}" Background="Black">

                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ShieldAccount"
                               Width="18"
                               Height="18"
                               Foreground="#CBD5E1"/>
                                        <TextBlock Text="Student Information"
                 Margin="3,0,0,0"
                 Foreground="#CBD5E1"
                 Visibility="{Binding DataContext.IsSidebarExpanded,
                     RelativeSource={RelativeSource AncestorType=Window},
                     Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Expander.HeaderTemplate>

                            <StackPanel>
                                <Button Content="My Students"
      Tag="AccountMultiple"
      Style="{StaticResource SubMenuButtonStyle}"
      Click="Students_Click"/>

                                <Button Content="Student Profiles"
      Tag="ShieldAccount"
      Style="{StaticResource SubMenuButtonStyle}"
      Click="Attendance_Click"/>

                                <Button Content="Academic History"
      Tag="LockReset"
      Style="{StaticResource SubMenuButtonStyle}"
      Click="TeacherMarks_Click"/>


                            </StackPanel>
                        </Expander>
                        <!-- ================= Attendance ================= -->
                        <Expander Header="Attendance"
IsExpanded="False"
Visibility="{Binding IsTeacher,
