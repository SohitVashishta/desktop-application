                                RelativeSource={RelativeSource AncestorType=Window},
                                Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Expander.HeaderTemplate>

                            <StackPanel>
                                <Button Content="Student Attendance"
                 Tag="ClipboardAccountOutline"
                 Style="{StaticResource SubMenuButtonStyle}"
                 Click="ManageUsers_Click"/>

                                <Button Content="Teacher Attendance"
                 Tag="ClipboardAccountOutline"
                 Style="{StaticResource SubMenuButtonStyle}"
                 Click="AssignRoles_Click"/>

                                <Button Content="Staff Attendance"
                 Tag="ClipboardAccountOutline"
                 Style="{StaticResource SubMenuButtonStyle}"
                 Click="ResetPasswords_Click"/>

                                <Button Content="Attendance Reports"
                 Tag="FileChartOutline"
                 Style="{StaticResource SubMenuButtonStyle}"
                                        
                 Click="PortalAccess_Click"/>
                                <Button Content="Absentee Alerts"
Tag="AlertOutline"
Style="{StaticResource SubMenuButtonStyle}"
                       
Click="PortalAccess_Click"/>
                            </StackPanel>
                        </Expander>
                        <!-- Examination Grading -->
                        <Expander Header="Examination &amp; Grading"
           IsExpanded="False"
           Visibility="{Binding IsAdmin,
               Converter={StaticResource BoolToVisibilityConverter}}" Background="Black">

                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FileDocumentEditOutline"
                                          Width="18"
                                          Height="18"
                                          Foreground="#CBD5E1"/>
                                        <TextBlock Text="Examination &amp; Grading"
                            Margin="3,0,0,0"
                            Foreground="#CBD5E1"
                            Visibility="{Binding DataContext.IsSidebarExpanded,
                                RelativeSource={RelativeSource AncestorType=Window},
                                Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Expander.HeaderTemplate>

                            <StackPanel>
                                <Button Content="Exam Setup"
