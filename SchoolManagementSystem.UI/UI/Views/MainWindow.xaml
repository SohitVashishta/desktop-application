                                <Button Content="Document Uploads"
Tag="FileUploadOutline"
Style="{StaticResource SubMenuButtonStyle}"
                       
Click="DocumentUploads_Click"/>
                            </StackPanel>
                        </Expander>
                        <!-- Attendance Management -->
                        <Expander Header="Attendance Management"
           IsExpanded="False"
           Visibility="{Binding IsAdmin,
               Converter={StaticResource BoolToVisibilityConverter}}" Background="Black">

                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="CalendarCheckOutline"
                                          Width="18"
                                          Height="18"
                                          Foreground="#CBD5E1"/>
                                        <TextBlock Text="Attendance Management"
                            Margin="3,0,0,0"
                            Foreground="#CBD5E1"
