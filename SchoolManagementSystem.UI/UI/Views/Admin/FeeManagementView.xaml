<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.Admin.FeeManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SchoolManagementSystem.UI.UI.ViewModels">

    <!--<UserControl.DataContext>
        <vm:FeeManagementViewModel/>
    </UserControl.DataContext>-->

    <Border Style="{StaticResource CardStyle}">
        <StackPanel>

            <TextBlock Text="Fee Management"
                       Style="{StaticResource SectionHeaderStyle}"/>

            <Button Content="Load Fees"
                    Command="{Binding LoadCommand}"
                    Style="{StaticResource ActionButtonStyle}"
                    Background="{StaticResource PrimaryBrush}"
                    Foreground="White"/>

            <DataGrid ItemsSource="{Binding Fees}"
                      AutoGenerateColumns="False"
                      Margin="0,10,0,0">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Student"
                                        Binding="{Binding StudentName}"/>
                    <DataGridTextColumn Header="Class"
                                        Binding="{Binding Class}"/>
                    <DataGridTextColumn Header="Total"
                                        Binding="{Binding TotalAmount}"/>
                    <DataGridTextColumn Header="Paid"
                                        Binding="{Binding PaidAmount}"/>
                    <DataGridTextColumn Header="Pending"
                                        Binding="{Binding PendingAmount}"/>
                    <DataGridTextColumn Header="Due Date"
                                        Binding="{Binding DueDate}"/>
                    <DataGridCheckBoxColumn Header="Paid"
                                            Binding="{Binding IsPaid}"/>
                </DataGrid.Columns>

            </DataGrid>

        </StackPanel>
    </Border>
</UserControl>
