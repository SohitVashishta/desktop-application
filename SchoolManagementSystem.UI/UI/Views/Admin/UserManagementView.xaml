<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.Admin.UserManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Padding="16">
        <StackPanel>

            <TextBlock Text="User Role Management"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="0,0,0,10"/>

            <!-- SEARCH -->
            <TextBox Width="200"
                     Margin="0,0,0,8"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                      />

            <!-- ROLE FILTER -->
            <ComboBox Width="200"
                      Margin="0,0,0,8"
                      ItemsSource="{Binding Roles}"
                      SelectedItem="{Binding SelectedRole}" />

            <!-- ACTIONS -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Refresh"
                        Command="{Binding RefreshCommand}"
                        Margin="0,0,8,0"/>
                <Button Content="+ Add User"
                        Command="{Binding AddUserCommand}"/>
            </StackPanel>

            <!-- GRID -->
            <DataGrid ItemsSource="{Binding FilteredUsers}"
                      AutoGenerateColumns="False"
                      Height="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Username" Binding="{Binding Username}" />
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
                    <DataGridTextColumn Header="Role" Binding="{Binding Role}" />
                    <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" />
                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>
    </Border>
</UserControl>
