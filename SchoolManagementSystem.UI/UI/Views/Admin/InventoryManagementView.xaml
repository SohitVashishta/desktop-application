<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.Admin.InventoryManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SchoolManagementSystem.UI.UI.ViewModels">

    <!--<UserControl.DataContext>
        <vm:InventoryManagementViewModel/>
    </UserControl.DataContext>-->

    <ScrollViewer>
        <StackPanel>

            <TextBlock Text="Inventory Asset Management"
                       Style="{StaticResource SectionHeaderStyle}"/>

            <!-- ADD ASSET -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>

                    <TextBlock Text="Add Asset"
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>

                    <WrapPanel>
                        <TextBox Width="200" Margin="5"
                                
                                 Text="{Binding AssetName}"/>

                        <TextBox Width="160" Margin="5"
                              
                                 Text="{Binding Category}"/>

                        <TextBox Width="160" Margin="5"
                                
                                 Text="{Binding Location}"/>

                        <TextBox Width="120" Margin="5"
                                
                                 Text="{Binding PurchaseCost}"/>

                        <TextBox Width="140" Margin="5"
                                
                                 Text="{Binding PurchaseDate}"/>
                    </WrapPanel>

                    <Button Content="Add Asset"
                            Command="{Binding AddAssetCommand}"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="{StaticResource PrimaryBrush}"
                            Foreground="White"
                            Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- ASSET LIST -->
            <Border Style="{StaticResource CardStyle}" Margin="0,16,0,0">
                <DataGrid ItemsSource="{Binding Assets}"
                          AutoGenerateColumns="False">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Asset"
                                            Binding="{Binding AssetName}"/>
                        <DataGridTextColumn Header="Category"
                                            Binding="{Binding Category}"/>
                        <DataGridTextColumn Header="Location"
                                            Binding="{Binding Location}"/>
                        <DataGridTextColumn Header="Cost"
                                            Binding="{Binding PurchaseCost}"/>
                        <DataGridTextColumn Header="Status"
                                            Binding="{Binding Status}"/>
                        <DataGridTextColumn Header="Purchase Date"
                                            Binding="{Binding PurchaseDate}"/>
                    </DataGrid.Columns>

                </DataGrid>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
