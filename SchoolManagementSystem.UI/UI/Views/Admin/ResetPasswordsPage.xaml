<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.Admin.ResetPasswordsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      >

    <StackPanel Margin="20">
        <TextBlock Text="Reset User Password"
                   FontSize="18"
                   FontWeight="Bold"/>

        <TextBox Margin="0,10"
                 Text="{Binding Username}" />

        <PasswordBox Margin="0,5"/>

        <Button Content="Reset Password"
                Width="150"
                Margin="0,10"/>
    </StackPanel>
</UserControl>
