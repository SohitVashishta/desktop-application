<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.Admin.AssignRolesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">



    <StackPanel Margin="20">
        <TextBlock Text="Assign Roles &amp; Permissions"
                   FontSize="20"
                   FontWeight="Bold"/>

        <ComboBox Margin="0,10"
                  Width="250"
                  ItemsSource="{Binding Users}"
                  DisplayMemberPath="Username"/>

        <ComboBox Width="250">
            <ComboBoxItem Content="Admin"/>
            <ComboBoxItem Content="Teacher"/>
            <ComboBoxItem Content="Student"/>
            <ComboBoxItem Content="Parent"/>
            <ComboBoxItem Content="Staff"/>
        </ComboBox>

        <Button Content="Save Role"
                Width="120"
                Margin="0,15"/>
    </StackPanel>
</UserControl>
