<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.Admin.TimetableManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SchoolManagementSystem.UI.UI.ViewModels">

    <!--<UserControl.DataContext>
        <vm:TimetableManagementViewModel/>
    </UserControl.DataContext>-->

    <ScrollViewer>
        <StackPanel>

            <TextBlock Text="Timetable Management"
                       Style="{StaticResource SectionHeaderStyle}"/>

            <!-- ADD FORM -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>

                    <TextBlock Text="Create Timetable Entry"
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>

                    <WrapPanel>
                        <TextBox Width="120"
                                 Margin="5"
                                 
                                 Text="{Binding Class}"/>

                        <TextBox Width="120"
                                 Margin="5"
                                 
                                 Text="{Binding Section}"/>

                        <TextBox Width="140"
                                 Margin="5"
                                 
                                 Text="{Binding Subject}"/>

                        <TextBox Width="160"
                                 Margin="5"
                                 
                                 Text="{Binding Teacher}"/>

                        <TextBox Width="120"
                                 Margin="5"
                                 
                                 Text="{Binding Day}"/>

                        <TextBox Width="160"
                                 Margin="5"
                                
                                 Text="{Binding TimeSlot}"/>
                    </WrapPanel>

                    <Button Content="Add Timetable"
                            Command="{Binding AddCommand}"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="{StaticResource PrimaryBrush}"
                            Foreground="White"
                            Margin="0,10,0,0"/>

                </StackPanel>
            </Border>

            <!-- GRID -->
            <Border Style="{StaticResource CardStyle}" Margin="0,16,0,0">
                <DataGrid ItemsSource="{Binding Timetable}"
                          AutoGenerateColumns="False">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Class"
                                            Binding="{Binding Class}"/>
                        <DataGridTextColumn Header="Section"
                                            Binding="{Binding Section}"/>
                        <DataGridTextColumn Header="Subject"
                                            Binding="{Binding Subject}"/>
                        <DataGridTextColumn Header="Teacher"
                                            Binding="{Binding Teacher}"/>
                        <DataGridTextColumn Header="Day"
                                            Binding="{Binding Day}"/>
                        <DataGridTextColumn Header="Time Slot"
                                            Binding="{Binding TimeSlot}"/>
                    </DataGrid.Columns>

                </DataGrid>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
