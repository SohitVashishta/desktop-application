<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.Admin.ExamManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SchoolManagementSystem.UI.UI.ViewModels">

    <!--<UserControl.DataContext>
        <vm:ExamManagementViewModel/>
    </UserControl.DataContext>-->

    <Border Style="{StaticResource CardStyle}">
        <StackPanel>

            <TextBlock Text="Examination Grading"
                       Style="{StaticResource SectionHeaderStyle}"/>

            <Button Content="Load Exams"
                    Command="{Binding LoadCommand}"
                    Style="{StaticResource ActionButtonStyle}"
                    Background="{StaticResource PrimaryBrush}"
                    Foreground="White"/>

            <DataGrid ItemsSource="{Binding Exams}"
                      AutoGenerateColumns="False"
                      Margin="0,10,0,0">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Exam"
                                        Binding="{Binding ExamName}"/>
                    <DataGridTextColumn Header="Class"
                                        Binding="{Binding Class}"/>
                    <DataGridTextColumn Header="Subject"
                                        Binding="{Binding Subject}"/>
                    <DataGridTextColumn Header="Date"
                                        Binding="{Binding ExamDate}"/>
                    <DataGridTextColumn Header="Max Marks"
                                        Binding="{Binding MaxMarks}"/>
                    <DataGridCheckBoxColumn Header="Approved"
                                            Binding="{Binding IsApproved}"/>
                </DataGrid.Columns>

            </DataGrid>

        </StackPanel>
    </Border>
</UserControl>
