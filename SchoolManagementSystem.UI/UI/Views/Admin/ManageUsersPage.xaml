<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.Admin.ManageUsersPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:helpers="clr-namespace:SchoolManagementSystem.UI.UI.Helpers">

    <!-- ================= RESOURCES ================= -->
    <UserControl.Resources>
        <helpers:FirstLetterConverter x:Key="FirstLetterConverter"/>
        <helpers:BoolToStatusBackgroundConverter x:Key="BoolToStatusBackgroundConverter"/>
        <helpers:BoolToStatusTextConverter x:Key="BoolToStatusTextConverter"/>
    </UserControl.Resources>

    <materialDesign:DialogHost IsOpen="{Binding IsDialogOpen}">

        <!-- ================= ROOT ================= -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ================= TOOLBAR ================= -->
            <Border Grid.Row="0"
                    Background="#F9FAFB"
                    Padding="12"
                    BorderBrush="#E5E7EB"
                    BorderThickness="0,0,0,1">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- FILTERS -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                        <TextBox Width="150"
                                 Height="40"
                                 Margin="0,0,8,0"
                                 Padding="12,8"
                                 FontSize="13"
                                 VerticalContentAlignment="Center"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Search"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>

                        <ComboBox Width="150"
                                  Height="40"
                                  Margin="0,0,8,0"
                                  Padding="12,8"
                                  FontSize="13"
                                  VerticalContentAlignment="Center"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  ItemsSource="{Binding Roles}"
                                  SelectedItem="{Binding SelectedRole}"
                                  materialDesign:HintAssist.Hint="Role"/>

                        <ComboBox Width="140"
                                  Height="40"
                                  Padding="12,8"
                                  FontSize="13"
                                  VerticalContentAlignment="Center"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  SelectedItem="{Binding SelectedStatus}"
                                  materialDesign:HintAssist.Hint="Status">
                            <ComboBoxItem Content="All"/>
                            <ComboBoxItem Content="Active"/>
                            <ComboBoxItem Content="Inactive"/>
                        </ComboBox>

                        <Border Width="16"/>

                        <Button Width="100"
                                Height="40"
                                FontSize="13"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Background="#E5E7EB"
                                Foreground="#111827"
                                Command="{Binding ResetFiltersCommand}">
                            Reset
                        </Button>
                    </StackPanel>

                    <!-- ADD USER -->
                    <Button Grid.Column="1"
                            Width="140"
                            Height="40"
                            Background="#2563EB"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding AddUserCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountPlus"
                                                     Width="18"
                                                     Height="18"
                                                     Margin="0,0,6,0"/>
                            <TextBlock Text="Add User" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!-- ================= USERS GRID (PAGING FIXED) ================= -->
            <Border Grid.Row="1"
                    Background="White"
                    ClipToBounds="True">

                <DataGrid ItemsSource="{Binding FilteredUsers}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          RowHeight="48"
                          GridLinesVisibility="None"
                          ScrollViewer.VerticalScrollBarVisibility="Disabled"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          Style="{StaticResource MaterialDesignDataGrid}">

                    <DataGrid.Columns>

                        <!-- USER -->
                        <DataGridTemplateColumn Header="User" Width="3*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                                        <!-- AVATAR -->
                                        <Border Width="36"
                                                Height="36"
                                                Margin="0,0,12,0"
                                                CornerRadius="18"
                                                Background="#E0E7FF">
                                            <TextBlock Text="{Binding Username,
                                                Converter={StaticResource FirstLetterConverter}}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       FontWeight="SemiBold"
                                                       Foreground="#1E3A8A"/>
                                        </Border>

                                        <!-- NAME + EMAIL -->
                                        <StackPanel>
                                            <TextBlock Text="{Binding Username}"
                                                       FontWeight="SemiBold"
                                                       FontSize="13"/>
                                            <TextBlock Text="{Binding Email}"
                                                       FontSize="11"
                                                       Foreground="#6B7280"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- ROLE -->
                        <DataGridTextColumn Header="Role"
                                            Binding="{Binding Role}"
                                            Width="140">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontSize" Value="13"/>
                                    <Setter Property="Foreground" Value="#374151"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- STATUS -->
                        <DataGridTemplateColumn Header="Status" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Ellipse Width="8"
                                                 Height="8"
                                                 Margin="0,0,6,0"
                                                 Fill="{Binding IsActive,
                                                     Converter={StaticResource BoolToStatusBackgroundConverter}}"/>
                                        <TextBlock Text="{Binding IsActive,
                                                     Converter={StaticResource BoolToStatusTextConverter}}"
                                                   FontSize="12"
                                                   Foreground="#374151"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- ACTION -->
                        <DataGridTemplateColumn Header="" Width="72">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid HorizontalAlignment="Center">
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                                Width="32"
                                                Height="32"
                                                Padding="0"
                                                ToolTip="Edit User"
                                                Command="{Binding DataContext.EditUserCommand,
                                                  RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}">
                                            <materialDesign:PackIcon Kind="PencilOutline"/>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- ================= PAGINATION ================= -->
            <Border Grid.Row="2"
                    Padding="8"
                    Background="#F9FAFB"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1,0,0,0">

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">

                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            Command="{Binding PrevPageCommand}"
                            IsEnabled="{Binding CanGoPrevious}">
                        ◀ Prev
                    </Button>

                    <TextBlock Text="{Binding PageInfo}"
                               Margin="12,0"
                               VerticalAlignment="Center"
                               Foreground="#374151"/>

                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            Command="{Binding NextPageCommand}"
                            IsEnabled="{Binding CanGoNext}">
                        Next ▶
                    </Button>
                </StackPanel>
            </Border>

            <!-- ================= SNACKBAR ================= -->
            <materialDesign:Snackbar Grid.RowSpan="3"
                                     MessageQueue="{Binding SnackbarMessageQueue}"
                                     VerticalAlignment="Bottom"/>
        </Grid>
    </materialDesign:DialogHost>
</UserControl>
