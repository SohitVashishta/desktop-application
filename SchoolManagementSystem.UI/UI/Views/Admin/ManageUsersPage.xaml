<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.Admin.ManageUsersPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- ================================================= -->
    <!-- ROOT DIALOG HOST -->
    <!-- ================================================= -->
    <materialDesign:DialogHost IsOpen="{Binding IsDialogOpen}">

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ================================================= -->
            <!-- TOOLBAR : FILTERS (LEFT) + ADD USER (RIGHT) -->
            <!-- ================================================= -->
            <materialDesign:Card Padding="12" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- FILTERS -->
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center">

                        <TextBox Width="160"
                                 Margin="0,0,12,0"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Search user"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>

                        <ComboBox Width="160"
                                  Margin="0,0,12,0"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  ItemsSource="{Binding Roles}"
                                  SelectedItem="{Binding SelectedRole}"
                                  materialDesign:HintAssist.Hint="Role"/>

                        <ComboBox Width="160"
                                  Margin="0,0,12,0"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  SelectedItem="{Binding SelectedStatus}">
                            <ComboBoxItem Content="All"/>
                            <ComboBoxItem Content="Active"/>
                            <ComboBoxItem Content="Inactive"/>
                        </ComboBox>

                        <Button Width="160"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Command="{Binding ResetFiltersCommand}">
                            Reset
                        </Button>

                    </StackPanel>

                    <!-- ADD USER -->
                    <Button Grid.Column="1"
                            Width="160"
                            Padding="16,6"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding AddUserCommand}">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="AccountPlus"
                                                     Margin="0,0,6,0"/>
                            <TextBlock Text="Add User"/>
                        </StackPanel>
                    </Button>

                </Grid>
            </materialDesign:Card>

            <!-- ================================================= -->
            <!-- USERS GRID -->
            <!-- ================================================= -->
            <materialDesign:Card Grid.Row="1" Padding="0">

                <DataGrid ItemsSource="{Binding FilteredUsers}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          RowHeight="48"
                          HeadersVisibility="Column"
                          Style="{StaticResource MaterialDesignDataGrid}">

                    <!-- ROW HOVER + SELECTION -->
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow"
                               BasedOn="{StaticResource MaterialDesignDataGridRow}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F3F4F6"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E0E7FF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="Username"
                                            Binding="{Binding Username}"
                                            Width="2*"/>

                        <DataGridTextColumn Header="Email"
                                            Binding="{Binding Email}"
                                            Width="3*"/>

                        <DataGridTextColumn Header="Role"
                                            Binding="{Binding Role}"
                                            Width="140"/>

                        <!-- ACTIVE STATUS -->
                        <DataGridTemplateColumn Header="Active" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsActive}"
                                              IsEnabled="False"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- EDIT ACTION -->
                        <DataGridTemplateColumn Header="Edit" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="Edit user"
                                            Command="{Binding DataContext.EditUserCommand,
                                              RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}">
                                        <materialDesign:PackIcon Kind="Pencil"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </materialDesign:Card>

            <!-- ================================================= -->
            <!-- PAGINATION -->
            <!-- ================================================= -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,12,0,0">

                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{Binding PrevPageCommand}"
                        IsEnabled="{Binding CanGoPrevious}">
                    ◀ Prev
                </Button>

                <TextBlock Text="{Binding PageInfo}"
                           Margin="12,0"
                           VerticalAlignment="Center"/>

                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{Binding NextPageCommand}"
                        IsEnabled="{Binding CanGoNext}">
                    Next ▶
                </Button>
            </StackPanel>

            <!-- ================================================= -->
            <!-- SNACKBAR -->
            <!-- ================================================= -->
            <materialDesign:Snackbar Grid.RowSpan="3"
                                     MessageQueue="{Binding SnackbarMessageQueue}"
                                     VerticalAlignment="Bottom"/>
        </Grid>

        <!-- ================================================= -->
        <!-- ADD / EDIT USER DIALOG -->
        <!-- ================================================= -->
        <materialDesign:DialogHost.DialogContent>
            <materialDesign:Card Padding="24" Width="400">

                <StackPanel>

                    <TextBlock Text="{Binding DialogTitle}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,16"/>

                    <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Username"
                             Text="{Binding EditUser.Username}"/>

                    <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,12,0,0"
                             materialDesign:HintAssist.Hint="Email"
                             Text="{Binding EditUser.Email}"/>

                    <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Margin="0,12,0,0"
                              ItemsSource="{Binding Roles}"
                              SelectedItem="{Binding EditUser.Role}"
                              materialDesign:HintAssist.Hint="Role"/>

                    <!-- ACTIVE TOGGLE -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,16,0,0">
                        <TextBlock Text="Active"
                                   Margin="0,0,12,0"
                                   VerticalAlignment="Center"/>
                        <ToggleButton Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                      IsChecked="{Binding EditUser.IsActive}"/>
                    </StackPanel>

                    <!-- ACTIONS -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,24,0,0">

                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Command="{Binding CancelDialogCommand}">
                            Cancel
                        </Button>

                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Margin="12,0,0,0"
                                Command="{Binding SaveUserCommand}">
                            Save
                        </Button>

                    </StackPanel>

                </StackPanel>
            </materialDesign:Card>
        </materialDesign:DialogHost.DialogContent>

    </materialDesign:DialogHost>
</UserControl>
