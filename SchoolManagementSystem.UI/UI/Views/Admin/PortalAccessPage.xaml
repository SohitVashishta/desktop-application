<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.Admin.PortalAccessPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      >

    <StackPanel Margin="20">
        <TextBlock Text="Portal Access Control"
                   FontSize="18"
                   FontWeight="Bold"/>

        <CheckBox Content="Enable Student Portal" Margin="0,10"/>
        <CheckBox Content="Enable Teacher Portal"/>
        <CheckBox Content="Enable Parent Portal"/>
        <CheckBox Content="Enable Staff Portal"/>

        <Button Content="Save Settings"
                Width="140"
                Margin="0,15"/>
    </StackPanel>
</UserControl>
