<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.Attendance.MarkAttendanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="20">
        <StackPanel>

            <TextBlock Text="Mark Attendance"
                       FontSize="24"
                       FontWeight="Bold"/>

            <DatePicker SelectedDate="{Binding SelectedDate}"
                        Margin="0,10,0,10"/>

            <DataGrid ItemsSource="{Binding Students}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="*"/>
                    <DataGridCheckBoxColumn Header="Present"
                                             Binding="{Binding IsPresent}"
                                             Width="120"/>
                </DataGrid.Columns>
            </DataGrid>

            <Button Content="Save Attendance"
                    Height="40"
                    Margin="0,15,0,0"
                    Command="{Binding SaveCommand}"/>

        </StackPanel>
    </Grid>
</UserControl>
