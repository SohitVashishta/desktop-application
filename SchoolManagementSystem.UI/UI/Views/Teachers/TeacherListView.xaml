<UserControl x:Class="SchoolManagementSystem.UI.UI.Views.Teachers.TeacherListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SchoolManagementSystem.UI.UI.Helpers">

    <!-- LOCAL RESOURCES -->
    <UserControl.Resources>
        <local:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Filters -->
            <RowDefinition Height="*"/>
            <!-- Grid -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- ================= HEADER ================= -->
        <StackPanel Margin="0,0,0,15">
            <TextBlock Text="Teachers"
                       FontSize="24"
                       FontWeight="Bold"/>
            <TextBlock Text="Manage teacher profiles, search, filter and export data"
                       Foreground="Gray"
                       FontSize="12"/>
        </StackPanel>

        <!-- ================= FILTER PANEL ================= -->
        <Border Grid.Row="1"
                Background="#F8F9FA"
                Padding="12"
                CornerRadius="6"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Margin="0,0,0,15">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- SEARCH -->
                <StackPanel>
                    <TextBlock Text="Search"
                               FontSize="11"
                               Foreground="Gray"/>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Height="32"
                             Padding="8"
                             ToolTip="Search by name, subject or email"/>
                </StackPanel>

                <!-- FROM DATE -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <TextBlock Text="From Date"
                               FontSize="11"
                               Foreground="Gray"/>
                    <DatePicker SelectedDate="{Binding FromDate}"
                                Height="32"/>
                </StackPanel>

                <!-- TO DATE -->
                <StackPanel Grid.Column="2" Margin="10,0,0,0">
                    <TextBlock Text="To Date"
                               FontSize="11"
                               Foreground="Gray"/>
                    <DatePicker SelectedDate="{Binding ToDate}"
                                Height="32"/>
                </StackPanel>

                <!-- REFRESH -->
                <Button Grid.Column="3"
                        Content="Refresh"
                        Height="32"
                        Margin="15,18,0,0"
                        Command="{Binding RefreshCommand}"/>

                <!-- EXPORT -->
                <Button Grid.Column="4"
                        Content="Export Excel"
                        Height="32"
                        Margin="10,18,0,0"
                        Command="{Binding ExportExcelCommand}"/>
            </Grid>
        </Border>

        <!-- ================= DATA GRID + EMPTY STATE ================= -->
        <Grid Grid.Row="2">

            <!-- DATA GRID -->
            <DataGrid ItemsSource="{Binding PagedTeachers}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserSortColumns="True"
                      RowHeight="34"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal">

                <DataGrid.Columns>

                    <DataGridTextColumn Header="First Name"
                                        Binding="{Binding FirstName}"
                                        SortMemberPath="FirstName"
                                        Width="*"/>

                    <DataGridTextColumn Header="Last Name"
                                        Binding="{Binding LastName}"
                                        SortMemberPath="LastName"
                                        Width="*"/>

                    <DataGridTextColumn Header="Subject"
                                        Binding="{Binding Subject}"
                                        SortMemberPath="Subject"
                                        Width="*"/>

                    <DataGridTextColumn Header="Email"
                                        Binding="{Binding Email}"
                                        SortMemberPath="Email"
                                        Width="2*"/>

                    <!-- ACTIONS -->
                    <DataGridTemplateColumn Header="Actions" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center">

                                    <Button Content="✏"
                                            Width="30"
                                            Height="26"
                                            Margin="2"
                                            ToolTip="Edit"
                                            Command="{Binding DataContext.EditTeacherCommand,
                                                RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"/>

                                    <Button Content="🗑"
                                            Width="30"
                                            Height="26"
                                            Margin="2"
                                            ToolTip="Delete"
                                            Command="{Binding DataContext.DeleteTeacherCommand,
                                                RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>

            <!-- EMPTY STATE -->
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{Binding PagedTeachers.Count,
                            Converter={StaticResource ZeroToVisibilityConverter}}">

                <TextBlock Text="No teachers found"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="Gray"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Try adjusting search or date filters"
                           Foreground="Gray"
                           Margin="0,5,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- ================= FOOTER / PAGINATION ================= -->
        <Border Grid.Row="3"
                Margin="0,15,0,0"
                Padding="10"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="6">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- RECORD COUNT -->
                <TextBlock Text="{Binding Teachers.Count,
                          StringFormat=Total Records: {0}}"
                           VerticalAlignment="Center"
                           Foreground="Gray"/>

                <!-- PAGINATION -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">

                    <Button Content="◀ Prev"
                            Width="70"
                            Margin="5"
                            Command="{Binding PrevPageCommand}"/>

                    <TextBlock Text="{Binding CurrentPage}"
                               Margin="5"
                               VerticalAlignment="Center"/>

                    <TextBlock Text=" / "
                               VerticalAlignment="Center"/>

                    <TextBlock Text="{Binding TotalPages}"
                               Margin="5"
                               VerticalAlignment="Center"/>

                    <Button Content="Next ▶"
                            Width="70"
                            Margin="5"
                            Command="{Binding NextPageCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
